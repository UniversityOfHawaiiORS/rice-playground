<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KualiOrganizationCategoryMaintenanceDocument" parent="KualiOrganizationCategoryMaintenanceDocument-parentBean" />

  <bean id="KualiOrganizationCategoryMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kom.bo.OrganizationCategory" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KualiOrganizationCategoryMaintenanceDocument-EditOrganizationCategory" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="shortLabel" value="Organization Category" />
    <property name="summary" value="Organization Category Maintenance Document" />
    <property name="documentTypeName" value="KualiOrganizationCategoryMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KOCD" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Organization Category" />
    <property name="description" value="Maintenance document which allows you to create a new Organization Category, or modify existing Organization Category." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KualiOrganizationCategoryMaintenanceDocument-EditOrganizationCategory" parent="KualiOrganizationCategoryMaintenanceDocument-EditOrganizationCategory-parentBean" />

  <bean id="KualiOrganizationCategoryMaintenanceDocument-EditOrganizationCategory-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="id"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
      </list>
    </property>
    <property name="id" value="Edit Organization Category" />
    <property name="title" value="Edit Organization Category" />
  </bean>
</beans>
