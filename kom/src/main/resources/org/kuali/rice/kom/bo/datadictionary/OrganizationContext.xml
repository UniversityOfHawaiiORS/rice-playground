<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="OrganizationContext" parent="OrganizationContext-parentBean" />

  <bean id="OrganizationContext-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kom.bo.OrganizationContext" />
    <property name="inquiryDefinition" >
      <ref bean="OrganizationContext-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="OrganizationContext-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="id" />
    <property name="objectLabel" value="Organization Context" />
    <property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:shortLabel="Organizations"
              p:summary="Organizations"
              p:name="organizations"
              p:label="Organizations"
              p:description="Organization of this Contexts" />
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="OrganizationContext-id" />
        <ref bean="OrganizationContext-name" />
        <ref bean="OrganizationContext-description" />
        <ref bean="OrganizationContext-versionNumber" />
        <ref bean="OrganizationContext-objectId" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="OrganizationContext-id" parent="OrganizationContext-id-parentBean" />

  <bean id="OrganizationContext-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="id" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
    <property name="name" value="id" />
    <property name="label" value="ID" />
  </bean>
  <bean id="OrganizationContext-name" parent="OrganizationContext-name-parentBean" />

  <bean id="OrganizationContext-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="255" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="100" />
    </property>
    <property name="name" value="name" />
    <property name="label" value="Organization Context Name" />
  </bean>
  <bean id="OrganizationContext-description" parent="OrganizationContext-description-parentBean" />

  <bean id="OrganizationContext-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="255" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="100" />
    </property>
    <property name="name" value="description" />
    <property name="label" value="Organization Context Description" />
  </bean>
  <bean id="OrganizationContext-versionNumber" parent="OrganizationContext-versionNumber-parentBean" />

  <bean id="OrganizationContext-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>
  <bean id="OrganizationContext-objectId" parent="OrganizationContext-objectId-parentBean" />

  <bean id="OrganizationContext-objectId-parentBean" abstract="true" parent="AttributeReferenceDummy-objectId">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="OrganizationContext-inquiryDefinition" parent="OrganizationContext-inquiryDefinition-parentBean" />

  <bean id="OrganizationContext-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="id" />
              <bean parent="FieldDefinition"
                    p:attributeName="name" />
              <bean parent="FieldDefinition"
                    p:attributeName="description" />
            </list>
          </property>
          <property name="title" value="Header Text" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="organizations" />
                <property name="businessObjectClass" value="org.kuali.rice.kom.bo.Organization" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="id" />
                    <bean parent="FieldDefinition"
                          p:attributeName="shortName" />
                    <bean parent="FieldDefinition"
                          p:attributeName="name" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Organizations" />
        </bean>
      </list>
    </property>
    <property name="title" value="Organization Context Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="OrganizationContext-lookupDefinition" parent="OrganizationContext-lookupDefinition-parentBean" />

  <bean id="OrganizationContext-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Organization Context" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
        <bean parent="FieldDefinition"
              p:attributeName="organizations" />
      </list>
    </property>
    <property name="title" value="Organization Context Lookup" />
  </bean>
</beans>
