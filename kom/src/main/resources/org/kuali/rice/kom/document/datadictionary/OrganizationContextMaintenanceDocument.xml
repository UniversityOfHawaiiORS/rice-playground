<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.rice.kom.bo.OrganizationContext</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>WorkflowAdmin</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiOrganizationContextMaintenanceDocument</documentTypeName>
        <documentTypeCode>KPMD</documentTypeCode>
        <label>Organization Context</label>
        <summary>Organization Context Maintenance Document</summary>
        <description>Maintenance document which allows you to create new Organization Context, or modify existing Organization Context.</description>

        <lockingKeys>
