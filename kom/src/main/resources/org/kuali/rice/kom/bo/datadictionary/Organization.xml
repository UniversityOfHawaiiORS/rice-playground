<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.rice.kom.bo.Organization">

        <inquiry>
        	<title>Organization Inquiry</title>

        	<inquirySections>
        		<inquirySection title="Header Text">
        			<inquiryFields>
        				<field attributeName="id" />
        				<field attributeName="shortName" />
        				<field attributeName="name" />
        				<field attributeName="organizationCategory.name" />
                        <field attributeName="parentOrganizationId" />
        				<field attributeName="active" />
        			</inquiryFields>
        		</inquirySection>

        		<inquirySection title="Organization Contexts">
        			<inquiryFields>
        				<inquiryCollection name="organizationContexts"
        					businessObjectClass="org.kuali.rice.kom.bo.OrganizationContext">
        					<field attributeName="id" />
        					<field attributeName="name" />
                            <field attributeName="description" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>

                <inquirySection title="Organization Parents">
                    <inquiryFields>
                        <inquiryCollection name="organizationParents"
                            businessObjectClass="org.kuali.rice.kom.bo.Organization">
                            <field attributeName="id" />
                            <field attributeName="name" />
                            <field attributeName="description" />
                        </inquiryCollection>
                    </inquiryFields>
                </inquirySection>
        	</inquirySections>

        </inquiry>

        <lookup>
            <title>Organization Lookup</title>

            <instructions>Lookup a Organization</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="name" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="id" required="false"  />
                <lookupField attributeName="name" required="false" />
                <lookupField attributeName="shortName" required="false" />
                <lookupField attributeName="categoryId" required="false" />
                <lookupField attributeName="parentOrganizationId" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="id" />
                <field attributeName="name" />
                <field attributeName="shortName" />
                <field attributeName="organizationCategory.name" />
                <field attributeName="active" />
                <field attributeName="organizationContexts" />
                <field attributeName="parent.name" />
            </resultFields>
        </lookup>

        <titleAttribute>id</titleAttribute>

        <attributes>

            <attribute name="id" forceUppercase="true">
                <label>ID</label>
                <shortLabel>id</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="8" />
                </control>

			</attribute>

            <attribute name="shortName" forceUppercase="false">
                <label>Short Name</label>
                <shortLabel>Short Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

			</attribute>
            <attribute name="name" forceUppercase="false">
                <label>Organization Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

            </attribute>

           <attribute name="organizationCategory.name" forceUppercase="false">
                <label>Category</label>
                <shortLabel>Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

            </attribute>

           <attribute name="parent.name" forceUppercase="false">
                <label>Parent</label>
                <shortLabel>Parent</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

            </attribute>

            <attribute name="active" forceUppercase="true">
                <label>Active</label>
                <shortLabel>Active</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                   <select valuesFinderClass="org.kuali.core.lookup.keyvalues.IndicatorYNOnlyValuesFinder"/>
                </control>


            </attribute>

            <attributeReference name="parentOrganizationId"
                sourceAttributeName="id"
                sourceClassName="org.kuali.rice.kom.bo.Organization">
                <label>Parent Organization</label>
                <shortLabel>Parent</shortLabel>
                <required>false</required>
                <control>
                    <select
                        valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
                        businessObjectClass="org.kuali.rice.kom.bo.Organization"
                         labelAttribute="name"
                        includeKeyInLabel="false" />
                </control>

            </attributeReference>

           <attributeReference name="categoryId"
            sourceClassName="org.kuali.rice.kom.bo.OrganizationCategory"
            sourceAttributeName="id">
            <label>Category</label>
            <required>true</required>
            <control>
                <select
                    valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
                    businessObjectClass="org.kuali.rice.kom.bo.OrganizationCategory"
                    keyAttribute="id" labelAttribute="name"
                    includeKeyInLabel="false" />
            </control>
           </attributeReference>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
			<attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
        </attributes>

       <collections>
        	<collection name="organizationContexts">
        		<label>Contexts</label>
        		<shortLabel>OrganizationContexts</shortLabel>
                <elementLabel>Context</elementLabel>
        		<summary>Organization Contexts</summary>
        		<description>Contexts of this Organization</description>
        	</collection>
            <collection name="organizationParents">
                <label>Parent</label>
                <shortLabel>OrganizationParent</shortLabel>
                <elementLabel>Context</elementLabel>
                <summary>Organization Parent</summary>
                <description>Parent of this Organization</description>
            </collection>
        </collections>

        <objectLabel>Organization</objectLabel>
    </businessObject>
</dictionaryEntry>
