<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.rice.kom.bo.Organization">

        <inquiry>
            <title>Organization Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="id" />
                <field attributeName="shortName" />
                <field attributeName="name" />
                <field attributeName="parentOrganizationId" />
                <field attributeName="categoryId" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Organization Lookup</title>

            <instructions>Lookup a Organization</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="name" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="id" required="false" />
                <lookupField attributeName="shortName" required="false" />
                <lookupField attributeName="name" required="false" />
                <lookupField attributeName="parentOrganizationId" required="false" />
                <lookupField attributeName="categoryId" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="id" />
                <field attributeName="shortName" />
                <field attributeName="name" />
                <field attributeName="parentOrganizationId" />
                <field attributeName="categoryId" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>id</titleAttribute>

        <attributes>

            <attribute name="id" forceUppercase="true">
                <label>ID</label>
                <shortLabel>id</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="8" />
                </control>

			</attribute>

            <attribute name="shortName" forceUppercase="false">
                <label>Organization Short Name</label>
                <shortLabel>Short Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

			</attribute>
            <attribute name="name" forceUppercase="false">
                <label>Organization Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

            </attribute>
            <attribute name="parentOrganizationId" forceUppercase="false">
                <label>Parent Organization</label>
                <shortLabel>Parent</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="8" />
                </control>

            </attribute>
            <attribute name="categoryId" forceUppercase="false">
                <label>Organization Category</label>
                <shortLabel>Category</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="8" />
                </control>

            </attribute>
            <attribute name="active" forceUppercase="false">
                <label>Organization Active</label>
                <shortLabel>Active</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="1" />
                </control>

            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
			<attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
        </attributes>
        <objectLabel>Organization</objectLabel>
    </businessObject>
</dictionaryEntry>
