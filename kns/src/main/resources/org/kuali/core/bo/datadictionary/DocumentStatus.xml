<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="DocumentStatus" parent="DocumentStatus-parentBean" />

  <bean id="DocumentStatus-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.core.bo.DocumentStatus" />
    <property name="inquiryDefinition" >
      <ref bean="DocumentStatus-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="DocumentStatus-lookupDefinition" />
    </property>
    <property name="attributes" >
      <list>
        <ref bean="DocumentStatus-financialDocumentStatusCode" />
        <ref bean="DocumentStatus-financialDocumentStatusName" />
        <ref bean="DocumentStatus-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="DocumentStatus-financialDocumentStatusCode" parent="DocumentStatus-financialDocumentStatusCode-parentBean" />

  <bean id="DocumentStatus-financialDocumentStatusCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
    <property name="summary" value="financialDocumentStatusCode" />
    <property name="name" value="financialDocumentStatusCode" />
    <property name="label" value="Financial Document Status Code" />
    <property name="description" value="financialDocumentStatusCode description..." />
  </bean>
  <bean id="DocumentStatus-financialDocumentStatusName" parent="DocumentStatus-financialDocumentStatusName-parentBean" />

  <bean id="DocumentStatus-financialDocumentStatusName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="10" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="12" />
    </property>
    <property name="summary" value="financialDocumentStatusName" />
    <property name="name" value="financialDocumentStatusName" />
    <property name="label" value="Financial Document Status Name" />
    <property name="description" value="financialDocumentStatusName description..." />
  </bean>
  <bean id="DocumentStatus-versionNumber" parent="DocumentStatus-versionNumber-parentBean" />

  <bean id="DocumentStatus-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="DocumentStatus-inquiryDefinition" parent="DocumentStatus-inquiryDefinition-parentBean" />

  <bean id="DocumentStatus-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="financialDocumentStatusCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="financialDocumentStatusName" />
            </list>
          </property>
          <property name="title" value="Header Text" />
        </bean>
      </list>
    </property>
    <property name="title" value="Document Status Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="DocumentStatus-lookupDefinition" parent="DocumentStatus-lookupDefinition-parentBean" />

  <bean id="DocumentStatus-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Look up a Document Status" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="financialDocumentStatusCode" />
        <bean parent="FieldDefinition"
              p:attributeName="financialDocumentStatusName" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="financialDocumentStatusCode" />
        <bean parent="FieldDefinition"
              p:attributeName="financialDocumentStatusName" />
      </list>
    </property>
    <property name="title" value="Document Status Lookup" />
  </bean>
</beans>
