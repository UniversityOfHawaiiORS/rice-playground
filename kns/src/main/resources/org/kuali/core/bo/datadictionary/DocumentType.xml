<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="DocumentType" parent="DocumentType-parentBean" />

  <bean id="DocumentType-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.core.bo.DocumentType" />
    <property name="inquiryDefinition" >
      <ref bean="DocumentType-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="DocumentType-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="documentTypeCode" />
    <property name="objectLabel" value="Document Type" />
    <property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:shortLabel="Attributes"
              p:summary="Document Type Attributes"
              p:name="documentTypeAttributes"
              p:label="Document Type Attributes"
              p:description="Attributes assigned to this document type" />
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="DocumentType-documentTypeCode" />
        <ref bean="DocumentType-documentName" />
        <ref bean="DocumentType-documentTypeActiveIndicator" />
        <ref bean="DocumentType-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="DocumentType-documentTypeCode" parent="DocumentType-documentTypeCode-parentBean" />

  <bean id="DocumentType-documentTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="Doc Type Code" />
    <property name="maxLength" value="4" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="6" />
    </property>
    <property name="summary" value="Document Type Code" />
    <property name="name" value="documentTypeCode" />
    <property name="label" value="Document Type Code" />
    <property name="description" value="The code for the business function of all documents of this type." />
  </bean>
  <bean id="DocumentType-documentName" parent="DocumentType-documentName-parentBean" />

  <bean id="DocumentType-documentName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="Doc Name" />
    <property name="maxLength" value="40" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
    <property name="summary" value="documentName" />
    <property name="name" value="documentName" />
    <property name="label" value="Document Name" />
    <property name="description" value="documentName Description..." />
  </bean>
  <bean id="DocumentType-documentTypeActiveIndicator" parent="DocumentType-documentTypeActiveIndicator-parentBean" />

  <bean id="DocumentType-documentTypeActiveIndicator-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Active" />
    <property name="maxLength" value="1" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="CheckboxControlDefinition" />
    </property>
    <property name="summary" value="documentTypeActiveIndicator" />
    <property name="name" value="documentTypeActiveIndicator" />
    <property name="label" value="Document Type Active" />
    <property name="description" value="documentTypeActiveIndicator Description..." />
  </bean>
  <bean id="DocumentType-versionNumber" parent="DocumentType-versionNumber-parentBean" />

  <bean id="DocumentType-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="DocumentType-inquiryDefinition" parent="DocumentType-inquiryDefinition-parentBean" />

  <bean id="DocumentType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="documentTypeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="documentName" />
              <bean parent="FieldDefinition"
                    p:attributeName="documentTypeActiveIndicator" />
            </list>
          </property>
          <property name="title" value="Document Type" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="documentTypeAttributes" />
                <property name="businessObjectClass" value="org.kuali.core.bo.DocumentTypeAttribute" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="key" />   
                    <bean parent="FieldDefinition"
                          p:attributeName="label" />                             
                    <bean parent="FieldDefinition"
                          p:attributeName="value" />                                                          
                    <bean parent="FieldDefinition"
                          p:attributeName="active" />                                                          
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Attributes" />
        </bean>
      </list>
    </property>
    <property name="title" value="Document Type Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="DocumentType-lookupDefinition" parent="DocumentType-lookupDefinition-parentBean" />

  <bean id="DocumentType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Document Type" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>documentTypeCode</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="documentTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="documentName" />
        <bean parent="FieldDefinition"
              p:attributeName="documentTypeActiveIndicator"
              p:defaultValue="Y" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="documentTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="documentName" />
        <bean parent="FieldDefinition"
              p:attributeName="documentTypeActiveIndicator" />
      </list>
    </property>
    <property name="title" value="Document Type Lookup" />
  </bean>
</beans>
