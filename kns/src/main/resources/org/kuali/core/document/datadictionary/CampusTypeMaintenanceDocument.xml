<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KualiCampusTypeMaintenanceDocument" parent="KualiCampusTypeMaintenanceDocument-parentBean" />

  <bean id="KualiCampusTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.core.bo.CampusType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KualiCampusTypeMaintenanceDocument-EditCampusType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>campusTypeCode</value>
      </list>
    </property>
    <property name="shortLabel" value="Campus Type" />
    <property name="summary" value="Campus Type Maintenance Document" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KR-NS"
            p:parameterName="CAMPUS_TYPE_CODE"
            p:parameterDetailType="CampusType" />
    </property>
    <property name="documentTypeName" value="KualiCampusTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="CTYP" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>KUALI_ROLE_MAINTENANCE</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Campus Type" />
    <property name="description" value="Maintenance document which allows you to create new Campus Types, or modify existing Campus Types." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KualiCampusTypeMaintenanceDocument-EditCampusType" parent="KualiCampusTypeMaintenanceDocument-EditCampusType-parentBean" />

  <bean id="KualiCampusTypeMaintenanceDocument-EditCampusType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="campusTypeCode" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="campusTypeName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="dataObjectMaintenanceCodeActiveIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit Campus Type" />
    <property name="title" value="Edit Campus Type" />
  </bean>
</beans>
