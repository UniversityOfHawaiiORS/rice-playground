<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="UniversalUserMaintenanceDocument" parent="UniversalUserMaintenanceDocument-parentBean" />

  <bean id="UniversalUserMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.core.bo.user.UniversalUser" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.UniversalUserMaintainable" />
    <property name="maintainableSections" >
      <list>
        <ref bean="UniversalUserMaintenanceDocument-EditUser" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="campus"
              p:attributeToHighlightOnFail="campusCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="employeeStatus"
              p:attributeToHighlightOnFail="employeeStatusCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="employeeType"
              p:attributeToHighlightOnFail="employeeTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>personUniversalIdentifier</value>
      </list>
    </property>
    <property name="shortLabel" value="User" />
    <property name="summary" value="User maintenance document" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KR-NS"
            p:parameterName="UNIVERSAL_USER"
            p:parameterDetailType="UniversalUser" />
    </property>
    <property name="documentTypeName" value="UniversalUserMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.rules.UniversalUserRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.UniversalUserDocumentAuthorizer" />
    <property name="preRulesCheckClass" value="org.kuali.core.rules.UniversalUserPreRules" />
    <property name="documentTypeCode" value="UNVL" />
    <property name="workflowProperties" >
      <ref bean="UniversalUserMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="User" />
    <property name="description" value="Document used to create or update User objects" />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="UniversalUserMaintenanceDocument-EditUser" parent="UniversalUserMaintenanceDocument-EditUser-parentBean" />

  <bean id="UniversalUserMaintenanceDocument-EditUser-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personUserIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personUniversalIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personFirstName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personMiddleName" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personLastName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personEmailAddress" />
        <bean parent="MaintainableFieldDefinition"
              p:name="staff" />
        <bean parent="MaintainableFieldDefinition"
              p:name="faculty" />
        <bean parent="MaintainableFieldDefinition"
              p:name="student" />
        <bean parent="MaintainableFieldDefinition"
              p:name="affiliate" />
        <bean parent="MaintainableFieldDefinition"
              p:name="employeeStatusCode"
              p:defaultValue="A" />
        <bean parent="MaintainableFieldDefinition"
              p:name="employeeTypeCode"
              p:defaultValue="P" />
        <bean parent="MaintainableFieldDefinition"
              p:name="campusCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="primaryDepartmentCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personPayrollIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personTaxIdentifierTypeCode" />
        <bean parent="MaintainableFieldDefinition">
          <property name="displayMask" >
            <bean parent="Mask">
              <property name="maskFormatter" >
                <bean parent="MaskFormatterLiteral"
                      p:literal="***************" />
              </property>
            </bean>
          </property>
          <property name="displayEditMode" value="ssnEditEntry" />
          <property name="name" value="personTaxIdentifier" />
        </bean>
        <bean parent="MaintainableFieldDefinition"
              p:name="financialSystemsEncryptedPasswordText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personCampusAddress" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personLocalPhoneNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personBaseSalaryAmount" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit User" />
    <property name="title" value="Edit User" />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="UniversalUserMaintenanceDocument-workflowProperties" parent="UniversalUserMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="UniversalUserMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject" />
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject.changedModuleCodes" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
