<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AccountMaintenanceDocument" parent="AccountMaintenanceDocument-parentBean" />

  <bean id="AccountMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kns.test.document.bo.Account" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AccountMaintenanceDocument-EditAccount" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="extension.accountType"
              p:attributeToHighlightOnFail="extension.accountTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>number</value>
      </list>
    </property>
    <property name="shortLabel" value="AccountDocument" />
    <property name="summary" value="Account Maintenance document" />
    <property name="documentTypeName" value="AccountMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.rice.kns.test.document.AccountRules" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="AMD" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Account Maintenance Document" />
    <property name="description" value="Document used to create or update Accounts" />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AccountMaintenanceDocument-EditAccount" parent="AccountMaintenanceDocument-EditAccount-parentBean" />

  <bean id="AccountMaintenanceDocument-EditAccount-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="number" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="amId" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="extension.accountTypeCode" />
      </list>
    </property>
    <property name="id" value="Edit Account " />
    <property name="title" value="Edit Account " />
  </bean>
</beans>
