<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <!--
  ********************************************************************************************************************
            Data Attributes View -  for use in a selenium test to verify that data attributes for all controls are rendered ok
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView_selenium" parent="Uif-FormView">
    <property name="title" value="Data Attributes View"/>
    <property name="entryPageId" value="dataAttributesView-Page1"/>
    <property name="navigation">
      <ref bean="dataAttributesView-Menu"/>
    </property>
    <property name="items">
      <list>
        <bean parent="Uif-Page" p:id="dataAttributesView-Page1" p:title="Data Attributes - Page 1">
          <property name="items">
            <list>
              <ref bean="dataAttributesView-BoxSection1"/>
              <ref bean="dataAttributesView-BoxSection2"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="formClass" value="edu.sampleu.demo.kitchensink.UifComponentsTestForm"/>
  </bean>
   
  <!-- base beans to hold data attributes -->

  <bean id="Uif-InputField-LabelTop-with-test-data-attributes" parent="Uif-InputField-LabelTop" abstract="true">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
  </bean>

  <bean id="Uif-InputField-with-test-data-attributes" parent="Uif-InputField" abstract="true">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
  </bean>
  <!--
  ********************************************************************************************************************
                                           Data Attributes View Menu
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView-Menu" parent="Uif-TabNavigationGroup">
    <property name="items">
      <list>
         <ref bean="navigationLink"/>
      </list>
    </property>
  </bean>

  <!-- -->
  <bean id="navigationLink" parent="Uif-NavigationActionLink" p:navigateToPageId="dataAttributesView-Page1"
        p:actionLabel="Page 1">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           A section to hold input fields
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView-BoxSection1" parent="Uif-Disclosure-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
    <property name="title" value="InputFields"/>
    <property name="instructionalText" value="Items are rendered one after another vertically down the page"/>
    <property name="items">
      <list>
      <ref bean="textInputField_attrs"/>
      <ref bean="textAreaInputField_attrs"/>
      <ref bean="dropDown_attrs"/>
      <ref bean="datePicker"/>
      <ref bean="checkBox"/>
      <ref bean="radioButton"/>
      <ref bean="fileUpload"/>
      <ref bean="userControl"/>
      <ref bean="spinnerControl"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           A section to hold various fields
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView-BoxSection2" parent="Uif-Disclosure-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
    <property name="title" value="Various Fields"/>
    <property name="instructionalText" value="Items are rendered one after another vertically down the page"/>
    <property name="items">
      <list>
        <ref bean="imageField"/>
        <ref bean="actionLink-noImage"/>
        <ref bean="actionLink-imageRight"/>
        <ref bean="actionLink-imageLeft"/>
        <ref bean="imageAction"/>
        <ref bean="buttonImageOnly"/>
        <ref bean="buttonImageBottom"/>
        <ref bean="buttonImageLeft"/>
        <ref bean="buttonImageRight"/>
        <ref bean="buttonImageTop"/>
        <ref bean="linkField"/>
        <ref bean="messageField"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           All controls and widgets should be added below and their data attributes configured
  ********************************************************************************************************************
  -->

  <!-- text input field -->
  <bean id="textInputField_attrs" parent="Uif-InputField" p:label="Field Label" p:required="true"
        p:instructionalText="Instructions Instructions Instructions" p:constraintText="Constraint text"
        p:propertyName="field1">
    <property name="control">
      <bean parent="Uif-TextControl" p:size="30" p:watermarkText="Enter Data">
        <property name="dataAttributes">
          <map>
            <entry key="iconTemplateName" value="cool-icon-%s.png"/>
            <entry key="transitions" value="3"/>
            <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
            <entry key="intervals" value="{short:2, medium:5, long:13}"/>
          </map>
        </property>
      </bean>
    </property>
  </bean>

  <!-- text area -->
  <bean id="textAreaInputField_attrs" parent="Uif-InputField-with-test-data-attributes"
        p:label="Field Label" p:labelPlacement="TOP"
        p:instructionalText="Instructions Instructions Instructions" p:constraintText="Constraint text"
        p:fieldLabel.styleClasses="labelTop" p:fieldLabel.renderColon="false"
        p:required="true"  p:propertyName="field2">
    <property name="control">
      <bean parent="Uif-TextAreaControl" p:textExpand="true" p:rows="5"
            p:cols="40" p:watermarkText="Text Here...">
        <property name="dataAttributes">
          <map>
            <entry key="iconTemplateName" value="cool-icon-%s.png"/>
            <entry key="transitions" value="3"/>
            <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
            <entry key="intervals" value="{short:2, medium:5, long:13}"/>
          </map>
        </property>
       </bean>
    </property>
  </bean>

  <!-- select control -->
  <bean id="dropDown_attrs" parent="GenericTextField" p:propertyName="field88" p:label="Field 1">
    <property name="control">
      <bean parent="Uif-DropdownControl">
        <property name="options">
          <list>
            <bean parent="Uif-KeyLabelPair" p:key="Fruits" p:value="Fruits"/>
            <bean parent="Uif-KeyLabelPair" p:key="Vegetables" p:value="Vegetables"/>
            <bean parent="Uif-KeyLabelPair" p:key="None" p:value="none"/>
          </list>
        </property>
      </bean>
    </property>
  </bean>
  
  <!-- date picker -->
  <bean id="datePicker" parent="Uif-InputField-LabelTop-with-test-data-attributes" p:propertyName="field3" p:label="Date 2"
        p:instructionalText="Custom options: show on focus, different animation, and show 2 months at once">
    <property name="control">
      <bean parent="Uif-DateControl">
        <property name="datePicker.templateOptions">
          <map>
            <entry key="showOn" value="both"/>
            <entry key="buttonImage" value="@{#ConfigProperties['krad.externalizable.images.url']}cal.gif"/>
            <entry key="buttonImageOnly" value="true"/>
            <entry key="showAnim" value="fadeIn"/>
            <entry key="showButtonPanel" value="true"/>
            <entry key="changeMonth" value="true"/>
            <entry key="changeYear" value="true"/>
            <entry key="numberOfMonths" value="2"/>
          </map>
        </property>
      </bean>
    </property>
  </bean>

  <!-- checkbox -->
  <bean id="checkBox" parent="Uif-InputField-with-test-data-attributes" p:propertyName="bField1" p:label="Checkbox" p:defaultValue="true"
        p:instructionalText="Single CheckboxControl with defaultValue=&quot;true&quot; so checkbox is checked by default">
    <property name="control">
      <bean parent="Uif-CheckboxControl"/>
    </property>
  </bean>

  <!-- radio button -->
  <bean id="radioButton" parent="Uif-InputField-with-test-data-attributes" p:propertyName="field5" p:label="Radio 2" p:width="auto"
        p:instructionalText="RadioGroupControl using explicitly defined key-value pairs from the DD">
    <property name="control">
      <bean parent="Uif-VerticalRadioControl">
        <property name="options">
          <list>
            <bean parent="Uif-KeyLabelPair" p:key="1" p:value="Radio 1"/>
            <bean parent="Uif-KeyLabelPair" p:key="2" p:value="Radio 2"/>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <!-- file upload -->
  <bean id="fileUpload" parent="Uif-InputField-with-test-data-attributes" p:propertyName="fileUpload" p:label="File Control">
    <property name="instructionalText" value="Use to upload files"/>
    <property name="control">
      <bean parent="Uif-FileControl" p:size="30"/>
    </property>
  </bean>

  <!-- user control -->
  <bean id="userControl" parent="Uif-InputField-with-test-data-attributes" p:propertyName="testPerson.principalName" p:label="User Control">
    <property name="instructionalText"
              value="Type user id and user full name will display after tabbing, or use lookup to select a person"/>
    <property name="control">
      <bean parent="Uif-KimPersonControl" p:principalIdPropertyName="testPersonId"
            p:personNamePropertyName="testPerson.name"/>
    </property>
  </bean>

  <!-- spinner control -->
  <bean id="spinnerControl" parent="Uif-InputField-with-test-data-attributes" p:propertyName="field131" p:label="Spinner Control">
    <property name="instructionalText"
              value="Click the arrows on the right side of the control to increment/decrement the value"/>
    <property name="control">
      <bean parent="Uif-SpinnerControl"/>
    </property>
  </bean>
  
  <!-- image field -->
  <bean id="imageField" parent="Uif-ImageField" p:fieldLabel.render="false" p:altText="computer programming"
        p:captionHeaderText="Image Caption Text" p:cutlineText="Image cutline text here" p:styleClasses="kr-photo"
        p:source="@{#ConfigProperties['krad.externalizable.images.url']}computer_programming.jpg">
    <!-- set simple attributes on image -->
    <property name="image.dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
      </map>
    </property>
    <!-- to get the selenium test to pass - but is meant to be initialized to a generated value by krad -->
    <property name="image.id" value="imageField"/>
    <!-- set complex attributes on image field since it has a wrapping div - where they can be set -->
    <property name="dataAttributes">
      <map>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
  </bean>

  <!-- action link base bean with data attributes -->
  <bean id="Uif-ActionLink-with-data-attributes" parent="Uif-ActionLink" abstract="true">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
  </bean>

  <!-- action link no image -->
  <bean id="actionLink-noImage" parent="Uif-ActionLink-with-data-attributes" p:actionLabel="ActionLinkField" p:clientSideJs="alert('You clicked the link');"/>
  
  <!-- action link with image right -->
  <bean id="actionLink-imageRight" parent="Uif-ActionLink-with-data-attributes" p:actionLabel="ActionLinkField image right" p:actionImageLocation="RIGHT"
        p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"
            p:altText="Search"/>
    </property>
  </bean>

  <!-- action link with image left -->
  <bean id="actionLink-imageLeft" parent="Uif-ActionLink-with-data-attributes" p:actionLabel="ActionLinkField image left (default)"
        p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"
            p:altText="Search"/>
    </property>
  </bean>

  <!-- primary action button base bean to hold data attributes -->
  <bean id="Uif-PrimaryActionButton-with-data-attributes" parent="Uif-PrimaryActionButton">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
   </bean>

  <!-- action button - rendered as an image -->
  <bean id="imageAction" parent="Uif-PrimaryActionButton-with-data-attributes" p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}down.png"
            p:altText="ActionImageField demonstration"/>
    </property>
    <property name="actionImageLocation" value="IMAGE_ONLY"/>
  </bean>

  <!-- action button - no image - text only -->
  <bean id="buttonImageOnly" parent="Uif-PrimaryActionButton-with-data-attributes" p:actionLabel="ActionField" p:clientSideJs="alert('You clicked a button');"/>

  <!-- action button - image bottom -->
  <bean id="buttonImageBottom" parent="Uif-PrimaryActionButton-with-data-attributes" p:actionLabel="Image BOTTOM" p:actionImageLocation="BOTTOM"
        p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
    </property>
  </bean>

  <!-- action button - image top -->
  <bean id="buttonImageTop" parent="Uif-PrimaryActionButton-with-data-attributes" p:actionLabel="Image TOP" p:actionImageLocation="TOP"
        p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
    </property>
  </bean>

  <!-- button image left -->
  <bean id="buttonImageLeft" parent="Uif-PrimaryActionButton-with-data-attributes" p:actionLabel="Image LEFT" p:actionImageLocation="LEFT"
        p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
    </property>
  </bean>

  <!-- button image right -->
  <bean id="buttonImageRight" parent="Uif-PrimaryActionButton-with-data-attributes" p:actionLabel="Image RIGHT" p:actionImageLocation="RIGHT"
        p:clientSideJs="alert('You clicked a button');">
    <property name="actionImage">
      <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
    </property>
  </bean>

  <!-- link field -->
  <bean id="linkField" parent="Uif-LinkField" p:linkLabel="Kuali Website"
        p:hrefText="http://www.kuali.org" p:label="LinkField is used for href links">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
  </bean>

  <!-- message field -->
  <bean id="messageField" parent="Uif-MessageField" p:messageText="Welcome"
        p:styleClasses="fl-font-size-150,fl-input-outline">
    <property name="dataAttributes">
      <map>
        <entry key="iconTemplateName" value="cool-icon-%s.png"/>
        <entry key="transitions" value="3"/>
        <entry key="capitals" value="{kenya:'nairobi', uganda:'kampala', tanzania:'dar'}"/>
        <entry key="intervals" value="{short:2, medium:5, long:13}"/>
      </map>
    </property>
   </bean>
</beans>