<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <!--
  ********************************************************************************************************************
            Data Attributes View -  for use in a selenium test to verify that data attributes for all controls are rendered ok
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView_selenium" parent="Uif-FormView">
    <property name="title" value="Data Attributes View"/>
    <property name="entryPageId" value="dataAttributesView-Page1"/>
    <property name="navigation">
      <ref bean="dataAttributesView-Menu"/>
    </property>
    <property name="items">
      <list>
        <bean parent="Uif-Page" p:id="dataAttributesView-Page1" p:title="Data Attributes - Page 1">
          <property name="items">
            <list>
              <ref bean="dataAttributesView-BoxSection1"/>
              <!--
              <ref bean="UifLayoutView-BoxSection2"/>
              -->
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="formClass" value="edu.sampleu.demo.kitchensink.UifComponentsTestForm"/>
  </bean>
   <!--
  <bean id="UifLayoutView_KNS" parent="UifLayoutView">
    <property name="theme">
      <bean parent="Uif-ClassicKnsTheme"/>
    </property>
  </bean>
            -->
  <!--
  ********************************************************************************************************************
                                           Data Attributes View Menu
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView-Menu" parent="Uif-TabNavigationGroup">
    <property name="items">
      <list>
        <bean parent="Uif-NavigationActionLink" p:navigateToPageId="dataAttributesView-Page1"
              p:actionLabel="Page 1"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           A section to hold various controls and widgets
  ********************************************************************************************************************
  -->
  <bean id="dataAttributesView-BoxSection1" parent="Uif-Disclosure-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
    <property name="title" value="Box Layout Vertical"/>
    <property name="instructionalText" value="Items are rendered one after another vertically down the page"/>
    <property name="items">
      <list>
      <ref bean="textInputField"/>
      <ref bean="textAreaInputField"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           All controls and widgets should be added below and their data attributes configured
  ********************************************************************************************************************
  -->

  <!-- text input field -->
  <bean id="textInputField" parent="Uif-InputField-LabelTop" p:label="Field Label" p:required="true"
        p:instructionalText="Instructions Instructions Instructions" p:constraintText="Constraint text"
        p:propertyName="field1">
    <property name="control">
      <bean parent="Uif-TextControl" p:size="30" p:watermarkText="Enter Data">
        <property name="dataAttributes">
          <map>
            <entry key="iconTemplateName" value="cool-icon-%s.png"/>
            <entry key="transitions" value="3"/>
          </map>
        </property>
      </bean>
    </property>
  </bean>

  <!-- text area -->
  <bean id="textAreaInputField" parent="Uif-InputField"
        p:label="Field Label" p:labelPlacement="TOP"
        p:instructionalText="Instructions Instructions Instructions" p:constraintText="Constraint text"
        p:fieldLabel.styleClasses="labelTop" p:fieldLabel.renderColon="false"
        p:required="true"  p:propertyName="field2">
    <property name="control">
      <bean parent="Uif-TextAreaControl" p:textExpand="true" p:rows="5"
            p:cols="40" p:watermarkText="Text Here...">
        <property name="dataAttributes">
          <map>
            <entry key="iconTemplateName" value="cool-icon-%s.png"/>
            <entry key="transitions" value="3"/>
          </map>
        </property>
       </bean>
    </property>
  </bean>
</beans>