<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <bean id="UifCompView-WindowEventsGroup" parent="Uif-VerticalBoxSection" p:disclosure.render="false">
    <property name="title" value="Examples of Window Events on various components"/>
    <property name="items">
      <list>
        <ref bean="UifCompView-WEG-Group1"/>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-FormEventsGroup" parent="Uif-VerticalBoxSection" p:disclosure.render="false">
    <property name="title" value="Form Events"/>
    <property name="items">
      <list>
      </list>
    </property>
  </bean>
  <bean id="UifCompView-MouseEventsGroup" parent="Uif-VerticalBoxSection" p:disclosure.render="false">
    <property name="title" value="Mouse Events"/>
    <property name="items">
      <list>
      </list>
    </property>
  </bean>
  <bean id="UifCompView-KeyEventsGroup" parent="Uif-VerticalBoxSection" p:disclosure.render="false">
    <property name="title" value="Key Events"/>
    <property name="items">
      <list>
      </list>
    </property>
  </bean>
  <bean id="UifCompView-Html5EventsGroup" parent="Uif-VerticalBoxSection" p:disclosure.render="false">
    <property name="title" value="Events new to Html 5"/>
    <property name="items">
      <list>
      </list>
    </property>
  </bean>

  <bean id="UifCompView-WEG-Group1" parent="Uif-HorizontalBoxSection">
      <property name="items">
        <list>
          <bean parent="Uif-InputField" p:propertyName="bField1" p:label="Checkbox" p:defaultValue="true"
                p:instructionalText="onClick">
            <property name="onClickScript" value="alert('Clicked Checkbox Input Field');" />
            <property name="control">
              <bean parent="Uif-CheckboxControl">
                <property name="onClickScript" value="alert('Clicked Checkbox Control');" />
              </bean>
            </property>
          </bean>

          <bean parent="Uif-InputField" p:propertyName="field115" p:label="Checkboxes 2" p:width="auto"
                p:instructionalText="onClick for the checkbox group">
            <property name="control">
              <bean parent="Uif-VerticalCheckboxesControl">
                <property name="onClickScript" value="alert('Clicked Checkboxes control');" />
                <property name="options">
                  <list>
                    <bean parent="Uif-KeyLabelPair" p:key="1" p:value="Option 1"/>
                    <bean parent="Uif-KeyLabelPair" p:key="2" p:value="Option 2"/>
                    <bean parent="Uif-KeyLabelPair" p:key="3" p:value="Option 3"/>
                  </list>
                </property>
              </bean>
            </property>
          </bean>

          <bean parent="Uif-ImageField" p:fieldLabel.render="false" p:altText="computer programming"
                p:captionHeaderText="Image Caption Text" p:cutlineText="Image cutline text here" p:styleClasses="kr-photo"
                p:source="@{#ConfigProperties['krad.externalizable.images.url']}computer_programming.jpg">
            <property name="onClickScript" value="alert('Clicked image field');" />
          </bean>
          <bean parent="Uif-LinkField" p:linkLabel="Kuali Website"
                p:hrefText="http://www.kuali.org" p:label="LinkField is used for href links">
            <property name="onClickScript" value="alert('Clicked Link field');" />
          </bean>
          <bean parent="Uif-LinkGroup" p:title="LinkGroup"
                p:instructionalText="LinkGroup with | delimiter and [] begin and end delimiter"
                p:groupBeginDelimiter="[" p:groupEndDelimiter="]" p:linkSeparator="|">
            <property name="onClickScript" value="alert('Clicked LinkGroup');" />
            <property name="items">
              <list>
                <bean parent="Uif-ActionLink"
                      p:clientSideJs="alert('You clicked the link');" p:actionLabel="Link 1"/>
                <bean parent="Uif-ActionLink"
                      p:clientSideJs="alert('You clicked the link');" p:actionLabel="Link 2"/>
                <bean parent="Uif-ActionLink"
                      p:clientSideJs="alert('You clicked the link');" p:actionLabel="Link 3"/>
              </list>
            </property>
          </bean>

      </list>
    </property>
  </bean>

</beans>