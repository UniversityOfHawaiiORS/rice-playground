<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

  <!--
  ********************************************************************************************************************
                                               Dialog Test View
  ********************************************************************************************************************
  -->
  <bean id="DialogTestView" parent="Uif-FormView">
    <property name="headerText" value="Dialog Test View"/>
    <property name="items">
      <list>
        <bean parent="UifCompViewPageWithFooter" p:id="DialogView-Page1">
          <property name="items">
            <list>
              <bean parent="DialogTestView-MainGroup"/>
              <bean id="myDialog" parent="EraseHardDrive-DialogGroup"/>
              <bean id="mySensitiveDialog" parent="SensitiveData-DialogGroup"/>
              <bean id="myImage" parent="ImageDialog"/>
              <bean id="preDefinedDialogOkCancel" parent="OK-Cancel-DialogGroup" p:promptText="Would you like to continue?" />
              <bean id="preDefinedDialogYesNo" parent="Yes-No-DialogGroup" p:promptText="Would you like to save this document?" />
              <bean id="preDefinedDialogTrueFalse" parent="True-False-DialogGroup" p:promptText="Is this a correct statement?" />
              <bean id="checkboxDialog" parent="CheckboxDialog" p:promptText="Select Applicable" />
              <bean id="radioButtonDialog" parent="RadioButtonDialog" p:promptText="Select" />
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="theme">
      <bean parent="Uif-KradTheme"/>
    </property>
    <property name="formClass" value="edu.sampleu.demo.kitchensink.UifDialogTestForm"/>
  </bean>

  <bean id="DialogTestView_KNS" parent="DialogTestView">
    <property name="theme">
      <bean parent="Uif-ClassicKnsTheme"/>
    </property>
  </bean>

  <bean id="DialogTestView-MainGroup" parent="Uif-VerticalBoxSection">
    <property name="headerText" value="Main Section"/>
    <property name="items">
      <list>
        <bean parent="Uif-Message" p:messageText="This is the main page of the view. Regular content goes here..."/>
        <bean parent="Uif-InputField" p:propertyName="bField1" p:label="See dialog" p:defaultValue="false"
              p:instructionalText="show/hide dialog content">
          <property name="onChangeScript" value="jQuery('#myDialog').toggle();" />
          <property name="control">
            <bean parent="Uif-CheckboxControl"/>
          </property>
        </bean>


        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Lightbox from hidden group" p:clientSideJs="showLightboxComponent('mySensitiveDialog');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Lightbox from hidden image" p:clientSideJs="showLightboxComponent('myImage');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Lightbox from hidden group with overrides" p:clientSideJs="showLightboxComponent('myDialog', {openEffect : 'elastic', helpers:{overlay:{css:{cursor:'pointer', 'background-color':'green'}}}, closeEffect : 'elastic'});"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Lightbox from HTML" p:clientSideJs="showLightboxContent('Hello, I am a lightbox with &lt;b&gt;HTML&lt;/b&gt; content.');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Predefined Yes/No" p:clientSideJs="showLightboxComponent('preDefinedDialogYesNo');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Predefined OK/Cancel" p:clientSideJs="showLightboxComponent('preDefinedDialogOkCancel');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Predefined True/False" p:clientSideJs="showLightboxComponent('preDefinedDialogTrueFalse');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Checkboxes" p:clientSideJs="showLightboxComponent('checkboxDialog');"/>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Radiobuttons" p:clientSideJs="showLightboxComponent('radioButtonDialog');"/>
      </list>
    </property>
  </bean>

  <bean id="EraseHardDrive-DialogGroup" parent="Uif-DialogGroup" >
    <property name="promptText" value="You are about to erase your hard drive. Continue??"/>
    <property name="availableResponses">
      <list>
        <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="OK"/>
        <bean parent="Uif-KeyLabelPair" p:key="N" p:value="Cancel"/>
      </list>
    </property>
  </bean>
  <bean id="ImageDialog" parent="Uif-ImageField" p:hidden="true" p:fieldLabel.render="false"
        p:source="@{#ConfigProperties['krad.externalizable.images.url']}computer_programming.jpg"/>
  <bean id="CheckboxDialog" parent="Checkbox-DialogGroup" >
    <property name="explanation">
      <bean parent="Uif-InputField" p:propertyName="dialogExplanation" p:render="false">
        <property name="control">
          <bean parent="Uif-VerticalCheckboxesControl">
            <property name="options">
              <list>
                <bean parent="Uif-KeyLabelPair" p:key="A" p:value="Option A"/>
                <bean parent="Uif-KeyLabelPair" p:key="B" p:value="Option B"/>
                <bean parent="Uif-KeyLabelPair" p:key="C" p:value="Option C"/>
              </list>
            </property>
          </bean>
        </property>
      </bean>
    </property>
    <property name="availableResponses">
      <list>
        <bean parent="Uif-KeyLabelPair" p:key="O" p:value="OK"/>
      </list>
    </property>
  </bean>
  <bean id="RadioButtonDialog" parent="RadioButton-DialogGroup">
    <property name="promptText" value="Select"/>
    <property name="explanation">
      <bean parent="Uif-InputField" p:propertyName="dialogExplanation" p:render="false">
        <property name="control">
          <bean parent="Uif-VerticalRadioControl">
            <property name="options">
              <list>
                <bean parent="Uif-KeyLabelPair" p:key="A" p:value="Radio A"/>
                <bean parent="Uif-KeyLabelPair" p:key="B" p:value="Radio B"/>
              </list>
            </property>
          </bean>
        </property>
      </bean>
    </property>
    <property name="availableResponses">
      <list>
        <bean parent="Uif-KeyLabelPair" p:key="O" p:value="OK"/>
      </list>
    </property>
  </bean>
</beans>