<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <!--
  ********************************************************************************************************************
            Data Attributes View -  for use in a selenium test to verify that data attributes for all controls are rendered ok
  ********************************************************************************************************************
  -->
  <bean id="configurationTestView" parent="Uif-FormView">
    <property name="title" value="Data Attributes View"/>
    <property name="entryPageId" value="configurationTestView-Page1"/>
    <property name="navigation">
      <ref bean="configurationTestView-Menu"/>
    </property>
    <property name="items">
      <list>
        <bean parent="Uif-Page" p:id="configurationTestView-Page1" p:title="Data Attributes - Page 1">
          <property name="items">
            <list>
              <ref bean="configurationTestView-BoxSection1"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="formClass" value="edu.sampleu.demo.kitchensink.UifComponentsTestForm"/>
  </bean>

  <bean id="configurationTestView_KNS" parent="configurationTestView">
    <property name="theme">
      <bean parent="Uif-ClassicKnsTheme"/>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           Data Attributes View Menu
  ********************************************************************************************************************
  -->
  <bean id="configurationTestView-Menu" parent="Uif-TabNavigationGroup">
    <property name="items">
      <list>
         <ref bean="navigationLink"/>
      </list>
    </property>
  </bean>

  <!-- -->
  <bean id="navigationLink" parent="Uif-NavigationActionLink" p:navigateToPageId="configurationTestView-Page1"
        p:actionLabel="Page 1">
  </bean>

  <!--
  ********************************************************************************************************************
                                           A section to hold various fields
  ********************************************************************************************************************
  -->
  <bean id="configurationTestView-BoxSection1" parent="Uif-Disclosure-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
    <property name="title" value="InputFields"/>
    <property name="instructionalText" value="Items are rendered one after another vertically down the page"/>
    <property name="items">
      <list>
        <ref bean="textInputField_config"/>
        <bean parent="GenericHorizontalFieldGroup" p:label="Conditional Options"
              p:group.instructionalText="Choose an option from the first select control which will change the options available in the second select control">
          <property name="items">
            <list>
              <ref bean="dropDown"/>
              <ref bean="refreshTextField"/>
            </list>
          </property>
        </bean>
        <ref bean="timeInfoCollection_test"/>
      </list>
    </property>
  </bean>

  <!-- testing that the property below is reflected on the field's label
    https://groups.google.com/a/kuali.org/group/rice.usergroup.krad/browse_thread/thread/1e501d07c1141aad# -->
  <bean id="textInputField_config" parent="Uif-InputField" p:label="Field Label" p:required="true"
        p:instructionalText="Instructions Instructions Instructions" p:constraintText="Constraint text"
        p:propertyName="field1">
    <property name="control">
      <bean parent="Uif-TextControl" p:size="30" p:watermarkText="Enter Data">
      </bean>
    </property>
    <property name="fieldLabel.style" value="color:red"/>
  </bean>

  <bean id="dropDown" parent="GenericTextField" p:propertyName="field88" p:label="Field 1">
    <property name="control">
      <bean parent="Uif-DropdownControl">
        <property name="options">
          <list>
            <bean parent="Uif-KeyLabelPair" p:key="Fruits" p:value="Fruits"/>
            <bean parent="Uif-KeyLabelPair" p:key="Vegetables" p:value="Vegetables"/>
            <bean parent="Uif-KeyLabelPair" p:key="None" p:value="None"/>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="refreshTextField" parent="GenericTextField" p:propertyName="field3" p:label="Field 2"
        p:optionsFinderClass="edu.sampleu.travel.options.FoodKeyValuesFinder"
        p:refreshWhenChanged="field88">
    <property name="control">
      <bean parent="Uif-DropdownControl"  p:disabled="@{#form.field88 eq 'None'}"/>
    </property>
  </bean>

  <!-- testing https://groups.google.com/a/kuali.org/group/rice.usergroup.krad/browse_thread/thread/52bbf392a44c312d/6cfac6367373e3a8?lnk=gst&q=expression+error#6cfac6367373e3a8
  expression error on refresh for components within a collection -->
  <bean id="timeInfoCollection_test" parent="Uif-Disclosure-TableCollectionSection">
    <property name="title" value="TimeInfo - Spring Expression Test"/>
    <property name="instructionalText"
              value="testing expression error on refresh for components within a collection"/>
    <property name="collectionObjectClass" value="edu.sampleu.demo.kitchensink.TimeInfo"/>
    <property name="propertyName" value="listTimeInfo"/>
    <property name="layoutManager.renderSequenceField" value="false" />
    <property name="layoutManager.generateAutoSequence" value="false" />
    <property name="layoutManager.separateAddLine" value="false" />
    <property name="layoutManager.richTable.render" value="false"/>
    <property name="items">
      <list>
        <ref bean="startTimeInputField_test"/>
        <ref bean="startTimeAmPmInputField_test"/>
        <ref bean="allDayInputField_test"/>
      </list>
    </property>
  </bean>

  <bean id="startTimeInputField_test" parent="Uif-InputField" p:propertyName="startTime" p:label="Start Time"
        p:progressiveRender="@{#lp.allDay eq false}">
    <property name="control">
      <bean parent="Uif-TextControl" p:size="4" p:watermarkText="hh:mm"/>
    </property>
    <property name="validCharactersConstraint">
      <bean parent="TimePatternConstraint" />
    </property>
  </bean>

  <bean id="startTimeAmPmInputField_test" parent="Uif-InputField" p:propertyName="startTimeAmPm"
        p:required="@{!#empty(#lp.startTime)}" p:refreshWhenChanged="#lp.startTime"
        p:progressiveRender="@{#lp.allDay eq false}">
    <property name="control">
      <bean parent="Uif-DropdownControl"  p:disabled="@{#empty(#lp.startTime)}">
        <property name="options">
          <list>
            <bean parent="Uif-KeyLabelPair" p:key="AM" p:value="AM"/>
            <bean parent="Uif-KeyLabelPair" p:key="PM" p:value="PM"/>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="allDayInputField_test" parent="Uif-InputField" p:propertyName="allDay" p:label="All Day">
    <property name="control">
      <bean parent="Uif-CheckboxControl"/>
    </property>
  </bean>
  
</beans>
