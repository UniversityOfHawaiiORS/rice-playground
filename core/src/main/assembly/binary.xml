<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory></outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <includes>
        <include>licenses/**</include>
        <include>scripts/**</include>
        <include>security/**</include>
        <include>*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>kns/src/test/webapp</directory>
      <outputDirectory>web-content</outputDirectory>
      <!-- Don't include the pieces from the sample app -->
      <excludes>
        <exclude>*</exclude>
        <exclude>WEB-INF/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>**/src/main/config/**</include>
      </includes>
    </fileSet>    
  </fileSets>
  <moduleSets>
        <moduleSet>
          <includes>
          	<include>org.kuali.rice:*</include>
          </includes>
          <!-- For some reason, this exclude is not working.  Not a big deal but it's annoying. -->
          <excludes>
            <exclude>org.kuali.rice:rice-testharness</exclude>
          </excludes>
          <binaries>
            <dependencySets>
    			<dependencySet>
    			    <useTransitiveFiltering>true</useTransitiveFiltering>
      				<excludes>
        				<exclude>junit:*</exclude>
        				<exclude>org.mortbay.jetty:*</exclude>
        				<exclude>tomcat:*</exclude>
        				<exclude>com.oracle:*</exclude>
        				<exclude>*:servlet-api</exclude>
        				<exclude>*:jsp-api</exclude>
        				<exclude>xapool:*</exclude>
        				<exclude>jotm:*</exclude>
      				</excludes>
    			</dependencySet>
			</dependencySets>
            <unpack>false</unpack>
            <outputDirectory>lib</outputDirectory>
          </binaries>
        </moduleSet>
      </moduleSets>
</assembly>