<?xml version="1.0" encoding="UTF-8"?>
<persistence 
    version="1.0" 
    xmlns="http://java.sun.com/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  
  <persistence-unit name="kom-unit" transaction-type="JTA">
    <mapping-file>META-INF/kom-orm.xml</mapping-file>
    <class>org.kuali.rice.kom.bo.OrganizationCategory</class>
    <class>org.kuali.rice.kom.bo.Organization</class>
    <class>org.kuali.rice.kom.bo.OrganizationContext</class>
    <class>org.kuali.rice.kom.bo.OrganizationsContexts</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>

</persistence>
