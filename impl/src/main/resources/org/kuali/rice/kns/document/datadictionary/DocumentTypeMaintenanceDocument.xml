<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KualiDocumentTypeMaintenanceDocument" parent="KualiDocumentTypeMaintenanceDocument-parentBean" />

  <bean id="KualiDocumentTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kns.bo.DocumentType" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KualiDocumentTypeMaintenanceDocument-EditDocumentType" />
        <ref bean="KualiDocumentTypeMaintenanceDocument-EditDocumentTypeAttributes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>documentTypeCode</value>
      </list>
    </property>
    <property name="shortLabel" value="Document Type" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KR-NS"
            p:parameterName="DOCUMENT_TYPE"
            p:parameterDetailType="DocumentType" />
    </property>
    <property name="documentTypeName" value="DocumentTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="DTYP" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Document Type" />
    <property name="description" value="Document used to create or update a document types in the system." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KualiDocumentTypeMaintenanceDocument-EditDocumentType" parent="KualiDocumentTypeMaintenanceDocument-EditDocumentType-parentBean" />

  <bean id="KualiDocumentTypeMaintenanceDocument-EditDocumentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="documentTypeCode" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="documentName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentTypeActiveIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit Document Type" />
    <property name="title" value="Edit Document Type" />
  </bean>

  <bean id="KualiDocumentTypeMaintenanceDocument-EditDocumentTypeAttributes" parent="KualiDocumentTypeMaintenanceDocument-EditDocumentTypeAttributes-parentBean" />

  <bean id="KualiDocumentTypeMaintenanceDocument-EditDocumentTypeAttributes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="businessObjectClass" value="org.kuali.rice.kns.bo.DocumentTypeAttribute" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="id"
                    p:name="id" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="key"
                    p:name="key" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="label"
                    p:name="label" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="value"
                    p:name="value" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="active"
                    p:name="active" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
          <property name="name" value="documentTypeAttributes" />
        </bean>
      </list>
    </property>
    <property name="id" value="Document Type Attributes" />
    <property name="title" value="Document Type Attributes" />
  </bean>
</beans>
