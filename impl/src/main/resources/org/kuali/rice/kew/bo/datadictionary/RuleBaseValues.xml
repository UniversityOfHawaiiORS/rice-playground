<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RuleBaseValues" parent="RuleBaseValues-parentBean" />

  <bean id="RuleBaseValues-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kew.rule.RuleBaseValues" />
    <property name="exporterClass" value="org.kuali.rice.kew.export.DataExporter" />
    <property name="inquiryDefinition" >
      <ref bean="RuleBaseValues-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="RuleBaseValues-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="ruleBaseValuesId" />
    <property name="objectLabel" value="Rule" />
    <property name="attributes" >
      <list>
        <ref bean="RuleBaseValues-ruleBaseValuesId" />
        <ref bean="RuleBaseValues-documentTypeName" />
        <ref bean="RuleBaseValues-ruleTemplateId" />
        <ref bean="RuleBaseValues-ruleTemplateName" />
        <ref bean="RuleBaseValues-description"/>
        <ref bean="RuleBaseValues-fromDate"/>
        <ref bean="RuleBaseValues-toDate"/>
      </list>
    </property>
    <property name="relationships" >
      <list>
      
        <bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="ruleTemplate" />
          <property name="primitiveAttributes" >
            <list>
              <bean parent="PrimitiveAttributeDefinition"
                    p:sourceName="ruleTemplateId"
                    p:targetName="ruleTemplateId" />
            </list>
          </property>
          <property name="supportAttributes" >
            <list>
              <bean parent="SupportAttributeDefinition"
                    p:identifier="true"
                    p:sourceName="ruleTemplate.name"
                    p:targetName="name" />
            </list>
          </property>
        </bean>
        
        <bean parent="RelationshipDefinition">
          <property name="objectAttributeName" value="documentType"/>
          <property name="primitiveAttributes" >
            <list>
              <bean parent="PrimitiveAttributeDefinition"
                    p:sourceName="docTypeName"
                    p:targetName="name" />
            </list>
          </property>
          <property name="supportAttributes" >
            <list>
              <bean parent="SupportAttributeDefinition"
                    p:identifier="true"
                    p:sourceName="docTypeName"
                    p:targetName="name" />
            </list>
          </property>
        </bean>
        
      </list>
    </property>
  </bean>

  <!-- Attribute Definitions -->

  <bean id="RuleBaseValues-ruleBaseValuesId" parent="RuleBaseValues-ruleBaseValuesId-parentBean" />

  <bean id="RuleBaseValues-ruleBaseValuesId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Id" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="ruleBaseValuesId" />
    <property name="label" value="Id" />
  </bean>

  <bean id="RuleBaseValues-ruleTemplateId" parent="RuleBaseValues-ruleTemplateId-parentBean" />

  <bean id="RuleBaseValues-ruleTemplateId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Rule Template Id" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="ruleTemplateId" />
    <property name="label" value="Rule Template Id" />
  </bean>
  
  <bean id="RuleBaseValues-ruleTemplateName" parent="RuleBaseValues-ruleTemplateName-parentBean" />

  <bean id="RuleBaseValues-ruleTemplateName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Rule Template" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="ruleTemplate.name" />
    <property name="label" value="Rule Template" />
  </bean>
  
  <bean id="RuleBaseValues-documentTypeName" parent="RuleBaseValues-documentTypeName-parentBean" />

  <bean id="RuleBaseValues-documentTypeName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Document Type" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="docTypeName" />
    <property name="label" value="Document Type" />
  </bean>
  
  <bean id="RuleBaseValues-description" parent="RuleBaseValues-description-parentBean" />

  <bean id="RuleBaseValues-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="description" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="60" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="3"
            p:cols="60" />
    </property>
  </bean>
  
  <bean id="RuleBaseValues-fromDate" parent="RuleBaseValues-fromDate-parentBean" />

  <bean id="RuleBaseValues-fromDate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="fromDate" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="From Date" />
    <property name="shortLabel" value="From Date" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="DateValidationPattern"/>
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
      	p:size="30"/>
    </property>
  </bean>

  <bean id="RuleBaseValues-toDate" parent="RuleBaseValues-toDate-parentBean" />

  <bean id="RuleBaseValues-toDate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="toDate" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="To Date" />
    <property name="shortLabel" value="To Date" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="DateValidationPattern"/>
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
      	p:size="30"/>
    </property>
  </bean>
  
  <bean id="RuleBaseValues-active" parent="RuleBaseValues-active-parentBean"/>
  
  <bean id="RuleBaseValues-active-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="activeInd" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Active" />
    <property name="shortLabel" value="Active" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="CheckboxControlDefinition" />
    </property>
    <property name="formatterClass" value="org.kuali.rice.kns.web.format.BooleanFormatter" />
  </bean>
  
  <bean id="RuleBaseValues-ignorePrevious" parent="RuleBaseValues-ignorePrevious-parentBean"/>
  
  <bean id="RuleBaseValues-ignorePrevious-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="ignorePrevious" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Ignore Previous" />
    <property name="shortLabel" value="Ignore Previous" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="CheckboxControlDefinition" />
    </property>
    <property name="formatterClass" value="org.kuali.rice.kns.web.format.BooleanFormatter" />
  </bean>
  

  
  <!-- Business Object Inquiry Definition -->

  <bean id="RuleBaseValues-inquiryDefinition" parent="RuleBaseValues-inquiryDefinition-parentBean" />

  <bean id="RuleBaseValues-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
      <list>
     	<bean parent="InquirySectionDefinition">
          <property name="title" value="Rule Template" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="ruleBaseValuesId" />
              <bean parent="FieldDefinition"
                    p:attributeName="ruleTemplate.name" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!-- Business Object Lookup Definition -->

  <bean id="RuleBaseValues-lookupDefinition" parent="RuleBaseValues-lookupDefinition-parentBean" />

  <bean id="RuleBaseValues-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Rule" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="docTypeName"/>
        <bean parent="FieldDefinition"
              p:attributeName="ruleTemplate.name"/>
        <bean parent="FieldDefinition"
              p:attributeName="ruleBaseValuesId"/>      
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="docTypeName" />
        <bean parent="FieldDefinition"
              p:attributeName="ruleBaseValuesId" />
        <bean parent="FieldDefinition"
              p:attributeName="ruleTemplate.name" />
      </list>
    </property>
    <property name="title" value="Rule Lookup" />
  </bean>
</beans>
