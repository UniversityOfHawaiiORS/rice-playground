    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
-->
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="DocumentTypeMaintenanceDocument-EditDocumentType" parent="DocumentTypeMaintenanceDocument-EditDocumentType-parentBean" />

  <bean id="DocumentTypeMaintenanceDocument-EditDocumentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Document Type" />
    <property name="title" value="Edit Document Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="documentTypeId"
              p:unconditionallyReadOnly="true" />
<!--
        <bean parent="MaintainableFieldDefinition"
              p:name="docTypeParentId"
              p:required="false" />
-->
        <bean parent="MaintainableFieldDefinition"
              p:name="parentDocType.name"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="name"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="label"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="serviceNamespace"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:required="true" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->

  <bean id="DocumentTypeMaintenanceDocument-workflowProperties" parent="DocumentTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="DocumentTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
