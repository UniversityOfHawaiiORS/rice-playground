<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RuleTemplate" parent="RuleTemplate-parentBean" />

  <bean id="RuleTemplate-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kew.rule.bo.RuleTemplate" />
    <property name="inquiryDefinition" >
      <ref bean="RuleTemplate-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="RuleTemplate-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="RuleTemplateId" />
    <property name="objectLabel" value="Rule Template" />
	<property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:shortLabel="ruleTemplateAttributes"
              p:summary="Rule Template Attributes"
              p:name="ruleTemplateAttributes"
              p:label="Rule Template Attributes"
              p:description="Attributes assigned to this Rule Template" />
        <bean parent="CollectionDefinition"
              p:shortLabel="ruleTemplateOptions"
              p:summary="Rule Template Options"
              p:name="ruleTemplateOptions"
              p:label="Rule Template Options"
              p:description="Options assigned to this Rule Template" />
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="RuleTemplate-RuleTemplateId" />
        <ref bean="RuleTemplate-name" />
        <ref bean="RuleTemplate-description" />
        <ref bean="RuleTemplate-lockVerNbr" />
        <ref bean="RuleTemplate-delegationTemplate" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RuleTemplate-RuleTemplateId" parent="RuleTemplate-RuleTemplateId-parentBean" />

  <bean id="RuleTemplate-RuleTemplateId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Id" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="RuleTemplateId" />
    <property name="label" value="Id" />
  </bean>

  <bean id="RuleTemplate-name" parent="RuleTemplate-name-parentBean" />

  <bean id="RuleTemplate-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="name" />
    <property name="label" value="Name" />
  </bean>

  <bean id="RuleTemplate-lockVerNbr" parent="RuleTemplate-lockVerNbr-parentBean" />

  <bean id="RuleTemplate-lockVerNbr-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="LockVerNbr" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="lockVerNbr" />
    <property name="label" value="Lock Version Number" />
  </bean>

  <bean id="RuleTemplate-description" parent="RuleTemplate-description-parentBean" />

  <bean id="RuleTemplate-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="description" />
    <property name="label" value="Description" />
  </bean> 
   
  <bean id="RuleTemplate-delegationTemplate" parent="RuleTemplate-delegationTemplate-parentBean" />

  <bean id="RuleTemplate-delegationTemplate-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="delegationTemplate" />
    <property name="maxLength" value="30" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="30" />
    </property>
    <property name="name" value="delegationTemplate" />
    <property name="label" value="Rule Template Delegate " />
  </bean>
 
  <!-- Business Object Inquiry Definition -->

  <bean id="RuleTemplate-inquiryDefinition" parent="RuleTemplate-inquiryDefinition-parentBean" />

  <bean id="RuleTemplate-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections">
      <list>
     	<bean parent="InquirySectionDefinition">
          <property name="title" value="Rule Template" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="RuleTemplateId" />
              <bean parent="FieldDefinition"
                    p:attributeName="name" />
              <bean parent="FieldDefinition"
                    p:attributeName="description" />
              <bean parent="FieldDefinition"
                    p:attributeName="lockVerNbr" />                    
              <bean parent="FieldDefinition"
                    p:attributeName="delegationTemplate"/>
                 
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!-- Business Object Lookup Definition -->

  <bean id="RuleTemplate-lookupDefinition" parent="RuleTemplate-lookupDefinition-parentBean" />

  <bean id="RuleTemplate-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Rule Template" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="name"
              p:forceLookup="true" />
       
        <bean parent="FieldDefinition"
              p:attributeName="description" />
         <!-- bean parent="FieldDefinition"
              p:attributeName="RuleTemplateId"
              p:forceLookup="true" /-->
        <!-- bean parent="FieldDefinition"
              p:attributeName="lockVerNbr" /-->
        <!-- bean parent="FieldDefinition"
              p:attributeName="delegationTemplate"/-->
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="RuleTemplateId" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
        <bean parent="FieldDefinition"
              p:attributeName="lockVerNbr"/>
        <bean parent="FieldDefinition"
              p:attributeName="delegationTemplate"/>
</list>
    </property>
    <property name="title" value="Rule Template Lookup" />
  </bean>
</beans>
