<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<import resource="classpath:org/kuali/rice/core/CommonSpringBeans.xml"/>

	<bean id="kimOjbConfigurer" class="org.kuali.rice.core.ojb.BaseOjbConfigurer">
		<property name="jcdAliases">
			<list>
				<value>kimDataSource</value>
			</list>
		</property>
		<property name="metadataLocation" value="classpath:org/kuali/rice/kim/config/OJB-repository-kim.xml" />
	</bean>

	<bean id="kimModuleConfiguration" parent="kimModuleConfiguration-parentBean"/>

	<bean id="kimModuleConfiguration-parentBean" class="org.kuali.rice.kns.bo.ModuleConfiguration" abstract="true">
		<property name="namespaceCode" value="KR-KIM" />
		<property name="initializeDataDictionary" value="true"/>
		<property name="dataDictionaryService" ref="dataDictionaryService" />
		<property name="persistenceService" ref="persistenceServiceOjb" />
		<property name="dataDictionaryPackages">
			<list>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonImpl.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/KimBaseBeans.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentAffiliation.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentEmploymentInfo.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentCitizenship.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentName.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentAddress.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentPhone.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentEmail.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentGroup.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentRole.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/PersonDocumentPrivacy.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/KimGroupImpl.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/KimRoleImpl.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/KimTypeImpl.xml</value>
                <value>classpath:org/kuali/rice/kim/document/datadictionary/IdentityManagementPersonDocument.xml</value>
            </list>
		</property>
        <property name="packagePrefixes">
            <list>
                <value>org.kuali.rice.kim.</value>
            </list>
        </property>
        <property name="externalizableBusinessObjectImplementations">
            <map>
	           <entry key="org.kuali.rice.kim.bo.Person" value="org.kuali.rice.kim.bo.impl.PersonImpl" />
            </map>
        </property>
	</bean>

	<bean id="kimModule" class="org.kuali.rice.kim.service.impl.KimModuleService"
        p:moduleConfiguration-ref="kimModuleConfiguration"
        p:personService-ref="kimPersonService"
        p:kualiModuleService-ref="kualiModuleService" />

	<bean id="kimDataSource" class="org.kuali.rice.core.database.PrimaryDataSourceFactoryBean" lazy-init="true"/>

	<bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate" lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
	</bean>

	<!-- Proxy for rollback on all exceptions -->
	<bean id="matchAllWithPropReqCheckedException" class="org.springframework.transaction.interceptor.MatchAlwaysTransactionAttributeSource"
		lazy-init="true">
		<property name="transactionAttribute">
			<value>PROPAGATION_REQUIRED,-Exception</value>
		</property>
	</bean>

	<bean id="matchAllWithPropReq" class="org.springframework.transaction.interceptor.MatchAlwaysTransactionAttributeSource" lazy-init="true">
		<property name="transactionAttribute">
			<value>PROPAGATION_REQUIRED</value>
		</property>
	</bean>

	<bean id="matchAllTxInterceptor" class="org.springframework.transaction.interceptor.TransactionInterceptor" lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="matchAllWithPropReq" />
		</property>
	</bean>


    <bean id="dbPlatformFactory" class="org.kuali.rice.kns.dbplatform.ConfigurableKualiDBPlatformFactory">
        <property name="ojbPlatform" value="${datasource.ojb.platform}" />
        <property name="dataSource" ref="kimDataSource" />
    </bean>

    <bean id="dbPlatform" factory-bean="dbPlatformFactory" factory-method="getPlatform" />

    <bean id="platformAwareDao" abstract="true" class="org.kuali.rice.kns.dao.impl.PlatformAwareDaoBaseOjb">
        <property name="jcdAlias" value="kimDataSource" />
        <property name="dbPlatform" ref="dbPlatform" />
    </bean>


	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator" lazy-init="true">
		<property name="interceptorNames">
			<list>
				<idref local="matchAllTxInterceptor" />
			</list>
		</property>
		<property name="beanNames">
			<list>
				<idref local="kimPersonService" />
				<!-- these too?
				<idref local="kimWorkgroupService" />
				<idref local="kimUserService" />
				<idref local="kimAuthenticationService" />
				<idref local="kimIdentityService" />
				<idref local="kimRoleService" />
				<idref local="kimIdentityManagementService" />
				<idref local="kimGroupService" />
				<idref local="kimPermissionService" />
				<idref local="kimResponsibilityService" />
				-->
			</list>
		</property>
	</bean>

    <bean id="kimSoapService" class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition" abstract="true">
       <property name="serviceNameSpaceURI" value="KIM"/>
       <property name="priority" value="3" />
       <property name="retryAttempts" value="0" />
       <property name="busSecurity" value="false"/>
    </bean>

    <bean id="kimService" class="org.kuali.rice.ksb.messaging.JavaServiceDefinition" abstract="true">
      <property name="serviceNameSpaceURI" value="KIM" />
      <property name="retryAttempts" value="0" />
    </bean>



  <!-- START JPA CONFIGURATION -->

  <!-- Used for @PersistenceContext auto-injection -->
  <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>

  <bean id="entityManagerFactory" class="org.kuali.rice.core.jpa.spring.RiceEntityManagerProxyFactoryBean">
    <constructor-arg value="rice.kim"/>
    <constructor-arg ref="kimDataSource"/>
  </bean>

  <!-- Used for @Transactional so you don't have to wire services up in here -->
  <tx:annotation-driven transaction-manager="transactionManager"/>

  <bean id="NoResultExceptionInterceptor" class="org.kuali.rice.core.jpa.spring.NoResultExceptionInterceptor" />

  <!--
  <bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
    <property name="interceptorNames">
      <list>
        <idref local="NoResultExceptionInterceptor" />
      </list>
    </property>
    <property name="beanNames">
      <list>
        <idref local="..."/>
      </list>
    </property>
  </bean>
  -->

  <!-- END JPA CONFIGURATION -->

  <bean id="kimWorkgroupService" class="org.kuali.rice.kim.service.impl.KimWorkgroupServiceImpl" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
  <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimWorkgroupService"
        p:localServiceName="kimWorkgroupService" />
    </property>
  </bean>

  <bean id="kimUserService" class="org.kuali.rice.kim.service.impl.KimUserServiceImpl" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimUserService"
        p:localServiceName="kimUserService" />
    </property>
  </bean>

  <bean id="kimAuthenticationService" class="org.kuali.rice.kim.service.impl.AuthenticationServiceImpl">
    <property name="validatePassword" value="false" />
  </bean>

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimAuthenticationService"
        p:localServiceName="kimAuthenticationService" />
    </property>
  </bean>

  <bean id="kimIdentityService" class="org.kuali.rice.kim.service.impl.IdentityServiceImpl" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimIdentityService"
        p:localServiceName="kimIdentityService" />
    </property>
  </bean>

  <bean id="kimIdentityManagementService" class="org.kuali.rice.kim.service.impl.IdentityManagementServiceImpl"
    p:entityPrincipalCacheMaxSize="200"
    p:entityPrincipalCacheMaxAge="30"
    p:groupCacheMaxSize="200"
    p:groupCacheMaxAge="30"
    p:permissionCacheMaxSize="200"
    p:permissionCacheMaxAge="30"
    p:responsibilityCacheMaxSize="200"
    p:responsibilityCacheMaxAge="30" />

  <bean id="kimRoleDao" class="org.kuali.rice.kim.dao.impl.KimRoleDaoOjb" parent="platformAwareDao" />
  <bean id="kimPermissionDao" class="org.kuali.rice.kim.dao.impl.KimPermissionDaoOjb" parent="platformAwareDao" />

  <bean id="kimManagementRoleService" class="org.kuali.rice.kim.service.impl.RoleManagementServiceImpl"
    p:roleCacheMaxSize="200"
    p:roleCacheMaxAge="30" />

  <bean id="kimRoleService" class="org.kuali.rice.kim.service.impl.RoleServiceImpl"
  	p:roleDao-ref="kimRoleDao" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimRoleService"
        p:localServiceName="kimRoleService" />
    </property>
  </bean>

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
      	p:service-ref="kimIdentityManagementService"
      	p:localServiceName="kimIdentityManagementService" />
    </property>
  </bean>

  <bean id="kimPersonService" class="org.kuali.rice.kim.service.impl.PersonServiceImpl"
  	p:identityManagementService-ref="kimIdentityManagementService"
    p:personDao-ref="kimPersonDao"
    p:personCacheMaxSize="200"
    p:personCacheMaxAge="30" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
      	p:service-ref="kimPersonService"
      	p:localServiceName="kimPersonService" />
    </property>
  </bean>

  <bean id="kimGroupService" class="org.kuali.rice.kim.service.impl.GroupServiceImpl"/>

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimGroupService"
        p:localServiceName="kimGroupService" />
    </property>
  </bean>

  <bean id="kimPermissionService" class="org.kuali.rice.kim.service.impl.PermissionServiceImpl"
    p:permissionDao-ref="kimPermissionDao"
  />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
  <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimPermissionService"
        p:localServiceName="kimPermissionService" />
    </property>
  </bean>

  <bean id="kimResponsibilityDao" class="org.kuali.rice.kim.dao.impl.KimResponsibilityDaoOjb" parent="platformAwareDao"/>

  <bean id="kimResponsibilityService" class="org.kuali.rice.kim.service.impl.ResponsibilityServiceImpl"
  	p:responsibilityDao-ref="kimResponsibilityDao"
  />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
  <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimResponsibilityService"
        p:localServiceName="kimResponsibilityService" />
    </property>
  </bean>

  <bean id="kimPersonDao" class="org.kuali.rice.kim.dao.proxy.PersonDaoProxy">
    <property name="daoJpa">
        <bean class="org.kuali.rice.kim.dao.impl.PersonDaoJpa" />
    </property>
    <property name="daoOjb">
        <bean class="org.kuali.rice.kim.dao.impl.PersonDaoOjb" parent="platformAwareDao"
		  	p:personImplementationClass="org.kuali.rice.kim.bo.impl.PersonImpl">
          <property name="personEntityTypeCodes">
            <list>
              <value>PERSON</value>
              <value>SYSTEM</value>
            </list>
          </property>
        </bean>
    </property>
  </bean>

  <bean id="activePrincipalRoleTypeService" class="org.kuali.rice.kim.service.impl.PrincipalDerivedRoleTypeServiceImpl" />

  <bean id="documentEditorRoleTypeService" class="org.kuali.rice.kns.authorization.PermissionDerivedRoleTypeService">
    <property name="roleNamesapce" value="KR-NS" />
	<property name="roleName" value="Document Editor" />
	<property name="permissionTemplateNamespace" value="KR-NS" />
	<property name="permissionTemplateName" value="Edit Document" />
  </bean>

  <bean id="documentTypeAndNodeOrStatePermissionTypeService" class="org.kuali.rice.kns.service.impl.DocumentTypeAndNodeOrStatePermissionTypeService" />

  <bean id="documentTypeAndExistingRecordsOnlyPermissionTypeService" class="org.kuali.rice.kns.service.impl.DocumentTypeAndExistingRecordsOnlyPermissionTypeService" />

  <bean id="defaultPermissionTypeService" class="org.kuali.rice.kim.service.support.impl.KimPermissionTypeServiceBase" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="activePrincipalRoleTypeService"
        p:localServiceName="activePrincipalRoleTypeService" />
    </property>
  </bean>
  
  <!-- for person Doc UI  -->
  <bean id="kimTypeService" class="org.kuali.rice.kim.service.support.impl.KimTypeServiceBase" />
  <bean id="kimPermissionTypeService" class="org.kuali.rice.kim.service.support.impl.KimPermissionTypeServiceBase"/>
    <bean id="kimRoleTypeService" class="org.kuali.rice.kim.service.support.impl.KimRoleTypeServiceBase"/>
  <bean id="kimUiDocumentService" class="org.kuali.rice.kim.service.impl.UiDocumentServiceImpl" />
  
      <bean id="groupLookupable" class="org.kuali.rice.kns.lookup.KualiLookupableImpl" parent="kualiLookupable">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.GroupLookupableHelperServiceImpl"
                parent="lookupableHelperService">
            </bean>
        </property>
    </bean>
  
        <bean id="personLookupable" class="org.kuali.rice.kim.lookup.PersonLookupableImpl" parent="kualiLookupable">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.PersonLookupableHelperServiceImpl"
                parent="lookupableHelperService">
            </bean>
        </property>
    </bean>
  
</beans>
