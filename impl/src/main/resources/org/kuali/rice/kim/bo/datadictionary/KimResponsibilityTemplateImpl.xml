
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KimResponsibilityTemplateImpl" parent="KimResponsibilityTemplateImpl-parentBean" />

  <bean id="KimResponsibilityTemplateImpl-parentBean" abstract="true" parent="BusinessObjectEntry"
        p:businessObjectClass="org.kuali.rice.kim.bo.role.impl.KimResponsibilityTemplateImpl"
        p:titleAttribute="responsibilityTemplateId"
        p:objectLabel="Responsibility Templates"
        p:inquiryDefinition-ref="KimResponsibilityTemplateImpl-inquiryDefinition"
        p:lookupDefinition-ref="KimResponsibilityTemplateImpl-lookupDefinition" >
    <property name="attributes" >
      <list>
        <ref bean="KimResponsibilityTemplateImpl-templateId" />
        <ref bean="KimResponsibilityTemplateImpl-namespaceCode" />
        <ref bean="KimResponsibilityTemplateImpl-name" />
        <ref bean="KimResponsibilityTemplateImpl-description" />
      </list>
    </property>
  </bean>

  <bean id="KimResponsibilityTemplateImpl-templateId" parent="KimResponsibilityTemplateImpl-templateId-parentBean" />
  <bean id="KimResponsibilityTemplateImpl-templateId-parentBean" parent="AttributeDefinition" abstract="true"
        p:name="responsibilityTemplateId"
        p:forceUppercase="true"
        p:label="Template Id"
        p:shortLabel="Template Id"
        p:maxLength="40"
        p:required="false" >
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="40" />
    </property>
  </bean>

  <bean id="KimResponsibilityTemplateImpl-namespaceCode" parent="KimResponsibilityTemplateImpl-namespaceCode-parentBean" />
  <bean id="KimResponsibilityTemplateImpl-namespaceCode-parentBean" parent="KimRoleImpl-namespaceCode" abstract="true"
        p:name="namespaceCode"
        p:label="Template Namespace Code"
        p:shortLabel="Template Namespace Code">
  </bean>
    
  <bean id="KimResponsibilityTemplateImpl-name" parent="KimResponsibilityTemplateImpl-name-parentBean" />
  <bean id="KimResponsibilityTemplateImpl-name-parentBean" parent="AttributeDefinition" abstract="true"
        p:name="name"
        p:label="Template Name"
        p:shortLabel="Template Name"
        p:maxLength="40"
        p:required="false" >
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="40" />
    </property>
  </bean>

  <bean id="KimResponsibilityTemplateImpl-description" parent="KimResponsibilityTemplateImpl-description-parentBean" />
  <bean id="KimResponsibilityTemplateImpl-description-parentBean" parent="AttributeDefinition" abstract="true"
        p:name="description"
        p:forceUppercase="true"
        p:label="Responsibility Template Description"
        p:shortLabel="Perm Templ Description"
        p:maxLength="40"
        p:required="false" >
    <property name="control" >
      <bean parent="TextControlDefinition" p:size="40" />
    </property>
  </bean>

  <bean id="KimResponsibilityTemplateImpl-inquiryDefinition" parent="KimResponsibilityTemplateImpl-inquiryDefinition-parentBean" />
  <bean id="KimResponsibilityTemplateImpl-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition"
        p:title="Responsibility Template Inquiry" >
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition"
              p:title="Responsibility Template Attributes"
              p:numberOfColumns="1" >
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition" p:attributeName="namespaceCode" />
              <bean parent="FieldDefinition" p:attributeName="name" />
        	  <bean parent="FieldDefinition" p:attributeName="description" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="KimResponsibilityTemplateImpl-lookupDefinition" parent="KimResponsibilityTemplateImpl-lookupDefinition-parentBean" />
  <bean id="KimResponsibilityTemplateImpl-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition"
        p:title="Responsibility Template Lookup" 
        p:instructions="Lookup a Responsibility Template" >
    <property name="lookupableID" value="responsibilityLookupable" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>responsibilityTemplateId</value>
          </list>
        </property>
        <property name="sortAscending" value="true" />
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
          <bean parent="FieldDefinition" p:attributeName="namespaceCode" />
          <bean parent="FieldDefinition" p:attributeName="name" />
       	  <bean parent="FieldDefinition" p:attributeName="description" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
          <bean parent="FieldDefinition" p:attributeName="responsibilityTemplateId" />
          <bean parent="FieldDefinition" p:attributeName="namespaceCode" />
          <bean parent="FieldDefinition" p:attributeName="name" />
       	  <bean parent="FieldDefinition" p:attributeName="description" />
      </list>
    </property>
  </bean>

</beans>