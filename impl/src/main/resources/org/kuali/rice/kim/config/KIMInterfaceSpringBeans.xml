<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

  <bean id="kimIdentityManagementService" class="org.kuali.rice.kim.service.impl.IdentityManagementServiceImpl"
    p:entityPrincipalCacheMaxSize="3000"
    p:entityPrincipalCacheMaxAgeSeconds="3600"
    p:groupCacheMaxSize="3000"
    p:groupCacheMaxAgeSeconds="3600"
    p:permissionCacheMaxSize="3000"
    p:permissionCacheMaxAgeSeconds="300"
    p:responsibilityCacheMaxSize="3000"
    p:responsibilityCacheMaxAgeSeconds="300" />

<!-- this service is intended to be run locally, should not be exported
