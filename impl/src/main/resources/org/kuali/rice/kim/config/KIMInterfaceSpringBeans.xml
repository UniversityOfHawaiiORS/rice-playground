  <bean id="kimRoleManagementService" class="org.kuali.rice.kim.service.impl.RoleManagementServiceImpl"
    p:roleCacheMaxSize="3000"
    p:roleCacheMaxAgeSeconds="3600" />
<!-- this service is intended to be run locally, should not be exported
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
  <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimRoleManagementService"
        p:localServiceName="kimRoleManagementService" />
    </property>
  </bean>
 -->

  <bean id="personService" class="org.kuali.rice.kim.service.impl.PersonServiceImpl"
    p:personCacheMaxSize="3000"
    p:personCacheMaxAgeSeconds="3600">
  <property name="personEntityTypeCodes">
    <list>
      <value>PERSON</value>
      <value>SYSTEM</value>
    </list>
  </property>
  </bean>

<!-- this service is intended to be run locally, should not be exported except for non-Rice applications
