<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

    <bean id="kimDataSource" class="org.kuali.rice.core.database.PrimaryDataSourceFactoryBean" lazy-init="true"/>

	<bean id="kimOjbConfigurer" class="org.kuali.rice.core.ojb.BaseOjbConfigurer">
		<property name="jcdAliases">
			<list>
				<value>kimDataSource</value>
			</list>
		</property>
		<property name="metadataLocation" value="classpath:org/kuali/rice/kim/config/OJB-repository-kim.xml" />
	</bean>




    <bean id="kimPlatformAwareDao" abstract="true" class="org.kuali.rice.kns.dao.impl.PlatformAwareDaoBaseOjb">
        <property name="jcdAlias" value="kimDataSource" />
        <property name="dbPlatform" ref="dbPlatform" />
    </bean>

    <bean id="kimSoapService" class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition" abstract="true">
       <property name="serviceNameSpaceURI" value="KIM"/>
       <property name="priority" value="3" />
       <property name="retryAttempts" value="0" />
       <property name="busSecurity" value="false"/>
    </bean>

    <bean id="kimService" class="org.kuali.rice.ksb.messaging.JavaServiceDefinition" abstract="true">
      <property name="serviceNameSpaceURI" value="KIM" />
      <property name="retryAttempts" value="0" />
    </bean>



  <!-- START JPA CONFIGURATION -->

  <bean id="kimEntityManagerFactory" class="org.kuali.rice.core.jpa.spring.RiceEntityManagerProxyFactoryBean">
    <constructor-arg value="rice.kim"/>
    <constructor-arg ref="kimDataSource"/>
  </bean>

  <bean id="kimEntityManager" class="org.springframework.orm.jpa.support.SharedEntityManagerBean">
  	<property name="entityManagerFactory" ref="kimEntityManagerFactory"/>
  </bean>

  <!-- END JPA CONFIGURATION -->

  <bean id="kimAuthenticationService" class="org.kuali.rice.kim.service.impl.AuthenticationServiceImpl">
    <property name="validatePassword" value="false" />
  </bean>

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimAuthenticationService"
        p:localServiceName="kimAuthenticationService" />
    </property>
  </bean>

  <bean id="kimIdentityService" class="org.kuali.rice.kim.service.impl.IdentityServiceImpl" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimIdentityService"
        p:localServiceName="kimIdentityService" />
    </property>
  </bean>

  <bean id="kimIdentityCacheService" class="org.kuali.rice.kim.service.impl.IdentityCacheServiceImpl" />

  <bean id="kimRoleDao" class="org.kuali.rice.kim.dao.impl.KimRoleDaoOjb" parent="kimPlatformAwareDao" />
  <bean id="kimGroupDao" class="org.kuali.rice.kim.dao.impl.KimGroupDaoOjb" parent="kimPlatformAwareDao" />
  <bean id="kimPermissionDao" class="org.kuali.rice.kim.dao.impl.KimPermissionDaoOjb" parent="kimPlatformAwareDao" />

  <bean id="kimRoleService" class="org.kuali.rice.kim.service.impl.RoleServiceImpl"
  	p:roleDao-ref="kimRoleDao" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimRoleService"
        p:localServiceName="kimRoleService" />
    </property>
  </bean>

  <alias alias="kimRoleUpdateService" name="kimRoleService" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimRoleUpdateService"
        p:localServiceName="kimRoleUpdateService" />
    </property>
  </bean>

  <bean id="kimGroupService" class="org.kuali.rice.kim.service.impl.GroupServiceImpl"/>

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimGroupService"
        p:localServiceName="kimGroupService" />
    </property>
  </bean>

  <alias alias="kimGroupUpdateService" name="kimGroupService" />
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimGroupUpdateService"
        p:localServiceName="kimGroupUpdateService" />
    </property>
  </bean>

  <bean id="kimPermissionService" class="org.kuali.rice.kim.service.impl.PermissionServiceImpl"
    p:permissionDao-ref="kimPermissionDao"
  />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
  <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimPermissionService"
        p:localServiceName="kimPermissionService" />
    </property>
  </bean>

  <bean id="kimResponsibilityDao" class="org.kuali.rice.kim.dao.impl.KimResponsibilityDaoOjb" parent="kimPlatformAwareDao"/>

  <bean id="kimResponsibilityService" class="org.kuali.rice.kim.service.impl.ResponsibilityServiceImpl"
  	p:responsibilityDao-ref="kimResponsibilityDao"
  />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
  <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimResponsibilityService"
        p:localServiceName="kimResponsibilityService" />
    </property>
  </bean>

  <!-- Kim Type Internal Service -->
  <bean id="kimTypeDaoJpa" class="org.kuali.rice.kim.dao.impl.KimTypeDaoJpa">
    <property name="entityManager" ref="kimEntityManager"/>
  </bean>

  <bean id="kimTypeDao" class="org.kuali.rice.kim.dao.impl.KimTypeDaoOjb" parent="kimPlatformAwareDao" />

  <bean id="kimTypeInternalService" class="org.kuali.rice.kim.service.support.impl.KimTypeInternalServiceImpl"
    p:kimTypeDao-ref="kimTypeDao" />



  <bean id="activePrincipalRoleTypeService" class="org.kuali.rice.kim.service.support.impl.PrincipalDerivedRoleTypeServiceImpl" />

  <bean id="groupInternalService" class="org.kuali.rice.kim.service.impl.GroupInternalServiceImpl" />

  <bean id="documentEditorRoleTypeService" class="org.kuali.rice.kns.authorization.PermissionDerivedRoleTypeServiceImpl">
	<property name="permissionTemplateNamespace" value="KR-NS" />
	<property name="permissionTemplateName" value="Edit Document" />
  </bean>
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="documentEditorRoleTypeService"
        p:localServiceName="documentEditorRoleTypeService" />
    </property>
  </bean>

  <bean id="documentOpenerRoleTypeService" class="org.kuali.rice.kns.authorization.PermissionDerivedRoleTypeServiceImpl">
	<property name="permissionTemplateNamespace" value="KR-NS" />
	<property name="permissionTemplateName" value="Open Document" />
  </bean>
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="documentOpenerRoleTypeService"
        p:localServiceName="documentOpenerRoleTypeService" />
    </property>
  </bean>

  <bean id="documentTypeAndNodeOrStatePermissionTypeService" class="org.kuali.rice.kns.service.impl.DocumentTypeAndNodeOrStatePermissionTypeServiceImpl" />

  <bean id="defaultPermissionTypeService" class="org.kuali.rice.kim.service.support.impl.KimPermissionTypeServiceBase" />

  <bean id="defaultResponsibilityTypeService" class="org.kuali.rice.kim.service.support.impl.KimResponsibilityTypeServiceBase" />

  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="activePrincipalRoleTypeService"
        p:localServiceName="activePrincipalRoleTypeService" />
    </property>
  </bean>

  <bean id="permissionPermissionTypeService" class="org.kuali.rice.kns.service.impl.NamespaceWildcardAllowedAndOrStringExactMatchPermissionTypeServiceImpl">
    	<property name="exactMatchStringAttributeName" value="permissionName" />
    	<property name="namespaceRequiredOnStoredAttributeSet" value="true" />
    </bean>
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="permissionPermissionTypeService"
        p:localServiceName="permissionPermissionTypeService" />
    </property>
  </bean>

  <bean id="responsibilityPermissionTypeService" class="org.kuali.rice.kns.service.impl.NamespaceWildcardAllowedAndOrStringExactMatchPermissionTypeServiceImpl">
    	<property name="exactMatchStringAttributeName" value="responsibilityName" />
    	<property name="namespaceRequiredOnStoredAttributeSet" value="true" />
    </bean>
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="responsibilityPermissionTypeService"
        p:localServiceName="responsibilityPermissionTypeService" />
    </property>
  </bean>

  <bean id="rolePermissionTypeService" class="org.kuali.rice.kns.service.impl.NamespaceWildcardAllowedAndOrStringExactMatchPermissionTypeServiceImpl">
    	<property name="exactMatchStringAttributeName" value="roleName" />
    	<property name="namespaceRequiredOnStoredAttributeSet" value="true" />
    </bean>
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="rolePermissionTypeService"
        p:localServiceName="rolePermissionTypeService" />
    </property>
  </bean>

  <bean id="groupPermissionTypeService" class="org.kuali.rice.kns.service.impl.NamespaceWildcardAllowedAndOrStringExactMatchPermissionTypeServiceImpl">
    	<property name="exactMatchStringAttributeName" value="groupName" />
    	<property name="namespaceRequiredOnStoredAttributeSet" value="true" />
    </bean>
  <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
    <property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="groupPermissionTypeService"
        p:localServiceName="groupPermissionTypeService" />
    </property>
  </bean>

  <!-- for person Doc UI  -->
  <bean id="kimTypeService" class="org.kuali.rice.kim.service.support.impl.KimTypeServiceBase" />
  <bean id="kimPermissionTypeService" class="org.kuali.rice.kim.service.support.impl.KimPermissionTypeServiceBase"/>
  <bean id="kimRoleTypeService" class="org.kuali.rice.kim.service.support.impl.KimRoleTypeServiceBase"/>
  <bean id="kimGroupTypeService" class="org.kuali.rice.kim.service.support.impl.KimGroupTypeServiceBase"/>
  <bean id="kimUiDocumentService" class="org.kuali.rice.kim.service.impl.UiDocumentServiceImpl" />
    <bean class="org.kuali.rice.ksb.messaging.KSBExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
    <property name="serviceDefinition">
      <bean parent="kimService"
        p:service-ref="kimUiDocumentService"
        p:localServiceName="kimUiDocumentService" />
    </property>
  </bean>

    <bean id="groupLookupable" class="org.kuali.rice.kim.lookup.GroupLookupableImpl" parent="kualiLookupable" scope="prototype">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.GroupLookupableHelperServiceImpl"
                parent="lookupableHelperService"
                p:groupDao-ref="kimGroupDao">
            </bean>
        </property>
    </bean>

    <bean id="roleLookupable" class="org.kuali.rice.kim.lookup.RoleLookupableImpl" parent="kualiLookupable" scope="prototype">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.RoleLookupableHelperServiceImpl"
                parent="lookupableHelperService"
                p:roleDao-ref="kimRoleDao">
            </bean>
        </property>
    </bean>

    <bean id="kimPersonLookupable" class="org.kuali.rice.kim.lookup.PersonLookupableImpl" parent="kualiLookupable" scope="prototype">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.PersonLookupableHelperServiceImpl"
                parent="lookupableHelperService">
            </bean>
        </property>
    </bean>

	<bean id="permissionLookupable" class="org.kuali.rice.kns.lookup.KualiLookupableImpl" parent="kualiLookupable" scope="prototype">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.PermissionLookupableHelperServiceImpl" parent="lookupableHelperService">
            </bean>
        </property>
    </bean>

	<bean id="responsibilityLookupable" class="org.kuali.rice.kns.lookup.KualiLookupableImpl" parent="kualiLookupable" scope="prototype">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.ResponsibilityLookupableHelperServiceImpl" parent="lookupableHelperService">
            </bean>
        </property>
    </bean>

	<bean id="kimTypeLookupableHelperServiceImpl" class="org.kuali.rice.kns.lookup.KualiLookupableImpl" parent="kualiLookupable" scope="prototype">
        <property name="lookupableHelperService">
            <bean class="org.kuali.rice.kim.lookup.KimTypeLookupableHelperServiceImpl" parent="lookupableHelperService">
            </bean>
        </property>
    </bean>

</beans>