<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KualiOrganizationContextMaintenanceDocument" parent="KualiOrganizationContextMaintenanceDocument-parentBean" />

  <bean id="KualiOrganizationContextMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kom.bo.OrganizationContext" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KualiOrganizationContextMaintenanceDocument-EditOrganizationContext" />
        <ref bean="KualiOrganizationContextMaintenanceDocument-Organizations" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="shortLabel" value="Organization Context" />
    <property name="summary" value="Organization Context Maintenance Document" />
    <property name="documentTypeName" value="KualiOrganizationContextMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KOCT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Organization Context" />
    <property name="description" value="Maintenance document which allows you to create new Organization Context, or modify existing Organization Context." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KualiOrganizationContextMaintenanceDocument-EditOrganizationContext" parent="KualiOrganizationContextMaintenanceDocument-EditOrganizationContext-parentBean" />

  <bean id="KualiOrganizationContextMaintenanceDocument-EditOrganizationContext-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="id"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="description" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit Organization Context" />
    <property name="title" value="Edit Organization Context" />
  </bean>
  <bean id="KualiOrganizationContextMaintenanceDocument-Organizations" parent="KualiOrganizationContextMaintenanceDocument-Organizations-parentBean" />

  <bean id="KualiOrganizationContextMaintenanceDocument-Organizations-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="sourceClassName" value="org.kuali.rice.kom.bo.Organization" />
          <property name="businessObjectClass" value="org.kuali.rice.kom.bo.Organization" />
          <property name="summaryTitle" value="Organizations" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:readOnlyAfterAdd="true"
                    p:template="id"
                    p:name="id"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="shortName"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="name"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
          <property name="name" value="organizations" />
        </bean>
      </list>
    </property>
    <property name="id" value="Organizations" />
    <property name="title" value="Organizations" />
  </bean>
</beans>
