<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KualiOrganizationMaintenanceDocument" parent="KualiOrganizationMaintenanceDocument-parentBean" />

  <bean id="KualiOrganizationMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kom.bo.Organization" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KualiOrganizationMaintenanceDocument-EditOrganization" />
        <ref bean="KualiOrganizationMaintenanceDocument-OrganizationsContexts" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="organizationContext"
              p:collection="organizationsContexts"
              p:attributeToHighlightOnFail="id" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="shortLabel" value="Organization" />
    <property name="summary" value="Organization Maintenance Document" />
    <property name="documentTypeName" value="KualiOrganizationMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KORG" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Organization" />
    <property name="description" value="Maintenance document which allows you to create new Organization, or modify existing Organization." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KualiOrganizationMaintenanceDocument-EditOrganization" parent="KualiOrganizationMaintenanceDocument-EditOrganization-parentBean" />

  <bean id="KualiOrganizationMaintenanceDocument-EditOrganization-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="id"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="shortName" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:name="parentOrganizationId" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="categoryId" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
      </list>
    </property>
    <property name="id" value="Edit Organization" />
    <property name="title" value="Edit Organization" />
  </bean>
  <bean id="KualiOrganizationMaintenanceDocument-OrganizationsContexts" parent="KualiOrganizationMaintenanceDocument-OrganizationsContexts-parentBean" />

  <bean id="KualiOrganizationMaintenanceDocument-OrganizationsContexts-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="businessObjectClass" value="org.kuali.rice.kom.bo.OrganizationsContexts" />
          <property name="summaryTitle" value="Organizations Contexts" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:readOnlyAfterAdd="true"
                    p:template="id"
                    p:name="id"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="active"
                    p:name="active" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="contextName"
                    p:name="contextName"
                    p:readOnly="true" />
            </list>
          </property>
          <property name="name" value="organizationsContexts" />
        </bean>
      </list>
    </property>
    <property name="id" value="Organizations Contexts" />
    <property name="title" value="Organizations Contexts" />
  </bean>
</beans>
