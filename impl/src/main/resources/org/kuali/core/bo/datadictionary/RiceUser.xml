<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RiceUser" parent="RiceUser-parentBean" />

  <bean id="RiceUser-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kns.bo.user.RiceUser" />
    <property name="inquiryDefinition" >
      <ref bean="RiceUser-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="RiceUser-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="personUniversalIdentifier" />
    <property name="attributes" >
      <list>
        <ref bean="RiceUser-personUniversalIdentifier" />
        <ref bean="RiceUser-universityId" />
        <ref bean="RiceUser-personUserIdentifier" />
        <ref bean="RiceUser-personName" />
        <ref bean="RiceUser-emailAddress" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RiceUser-personUniversalIdentifier" parent="RiceUser-personUniversalIdentifier-parentBean" />

  <bean id="RiceUser-personUniversalIdentifier-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="User Id" />
    <property name="maxLength" value="10" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="User ID" />
    <property name="name" value="personUniversalIdentifier" />
    <property name="label" value="User ID" />
    <property name="description" value="User ID" />
  </bean>
  <bean id="RiceUser-universityId" parent="RiceUser-universityId-parentBean" />

  <bean id="RiceUser-universityId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="University ID" />
    <property name="maxLength" value="11" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="required" value="false" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="13" />
    </property>
    <property name="summary" value="University ID" />
    <property name="name" value="universityId" />
    <property name="label" value="University ID" />
    <property name="description" value="University ID" />
  </bean>
  <bean id="RiceUser-personUserIdentifier" parent="RiceUser-personUserIdentifier-parentBean" />

  <bean id="RiceUser-personUserIdentifier-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Authentication User ID" />
    <property name="maxLength" value="15" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="15" />
    </property>
    <property name="summary" value="Authentication User ID" />
    <property name="name" value="personUserIdentifier" />
    <property name="label" value="Authentication User ID" />
    <property name="description" value="Authentication User ID" />
  </bean>
  <bean id="RiceUser-personName" parent="RiceUser-personName-parentBean" />

  <bean id="RiceUser-personName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="255" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="25" />
    </property>
    <property name="summary" value="Name" />
    <property name="name" value="personName" />
    <property name="label" value="Name" />
    <property name="description" value="Name" />
  </bean>
  <bean id="RiceUser-emailAddress" parent="RiceUser-emailAddress-parentBean" />

  <bean id="RiceUser-emailAddress-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Email" />
    <property name="maxLength" value="255" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="25" />
    </property>
    <property name="summary" value="Email" />
    <property name="name" value="emailAddress" />
    <property name="label" value="Email" />
    <property name="description" value="Email" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="RiceUser-inquiryDefinition" parent="RiceUser-inquiryDefinition-parentBean" />

  <bean id="RiceUser-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="personUniversalIdentifier" />
              <bean parent="FieldDefinition"
                    p:attributeName="universityId" />
              <bean parent="FieldDefinition"
                    p:attributeName="personUserIdentifier" />
              <bean parent="FieldDefinition"
                    p:attributeName="personName" />
            </list>
          </property>
          <property name="title" value="" />
        </bean>
      </list>
    </property>
    <property name="title" value="Universal User Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="RiceUser-lookupDefinition" parent="RiceUser-lookupDefinition-parentBean" />

  <bean id="RiceUser-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a User" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>personUniversalIdentifier</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="personUniversalIdentifier" />
        <bean parent="FieldDefinition"
              p:attributeName="universityId" />
        <bean parent="FieldDefinition"
              p:attributeName="personUserIdentifier" />
        <bean parent="FieldDefinition"
              p:attributeName="personName" />
        <bean parent="FieldDefinition"
              p:attributeName="emailAddress" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="personUniversalIdentifier" />
        <bean parent="FieldDefinition"
              p:attributeName="universityId" />
        <bean parent="FieldDefinition"
              p:attributeName="personUserIdentifier" />
        <bean parent="FieldDefinition"
              p:attributeName="personName" />
        <bean parent="FieldDefinition"
              p:attributeName="emailAddress" />
      </list>
    </property>
    <property name="title" value="User Lookup" />
  </bean>
</beans>
