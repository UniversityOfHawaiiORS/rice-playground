<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RiceUserMaintenanceDocument" parent="RiceUserMaintenanceDocument-parentBean" />

  <bean id="RiceUserMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.core.bo.user.RiceUser" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RiceUserMaintenanceDocument-EditUser" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>personUniversalIdentifier</value>
      </list>
    </property>
    <property name="shortLabel" value="UserMaintDoc" />
    <property name="summary" value="User maintenance document" />
    <property name="documentTypeName" value="RiceUserMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RUSR" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>WorkflowAdmin</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="User Maintenance Document" />
    <property name="description" value="Document used to create or update User objects" />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RiceUserMaintenanceDocument-EditUser" parent="RiceUserMaintenanceDocument-EditUser-parentBean" />

  <bean id="RiceUserMaintenanceDocument-EditUser-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personUniversalIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="universityId" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personUserIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="personName" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="emailAddress" />
      </list>
    </property>
    <property name="id" value="Edit User" />
    <property name="title" value="Edit User" />
  </bean>
</beans>
