<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KualiEmployeeStatusMaintenanceDocument" parent="KualiEmployeeStatusMaintenanceDocument-parentBean" />

  <bean id="KualiEmployeeStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.core.bo.EmployeeStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KualiEmployeeStatusMaintenanceDocument-EditEmployeeStatusCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>code</value>
      </list>
    </property>
    <property name="shortLabel" value="Employee Status" />
    <property name="summary" value="Employee Status" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KR-NS"
            p:parameterName="EMPLOYEE_STATUS"
            p:parameterDetailType="EmployeeStatus" />
    </property>
    <property name="documentTypeName" value="KualiEmployeeStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="EMST" />
    <property name="workflowProperties" >
      <ref bean="KualiEmployeeStatusMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Employee Status" />
    <property name="description" value="Document used to create or update Employee Status objects" />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KualiEmployeeStatusMaintenanceDocument-EditEmployeeStatusCode" parent="KualiEmployeeStatusMaintenanceDocument-EditEmployeeStatusCode-parentBean" />

  <bean id="KualiEmployeeStatusMaintenanceDocument-EditEmployeeStatusCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="code" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:name="rowActiveIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit Employee Status Code" />
    <property name="title" value="Edit Employee Status Code" />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="KualiEmployeeStatusMaintenanceDocument-workflowProperties" parent="KualiEmployeeStatusMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="KualiEmployeeStatusMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
