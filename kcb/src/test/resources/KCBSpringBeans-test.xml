<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- KENTestSpringBeans.xml - Test KEN spring context
     includes common notification spring beans
     overrides notification email service
     does not include security beans not required for unit tests -->
<beans>
  <import resource="KCBSpringBeans.xml"/>

  <!-- override business object dao -->
  <bean id="businessObjectDao" class="org.kuali.rice.kcb.dao.ojb.BusinessObjectDaoOjb">
    <property name="jcdAlias">
      <value>kcbDataSource</value>
    </property>
    <property name="useSelectForUpdate">
      <value>false</value>
    </property>
  </bean>

  <!-- override the notificationEmailService with a Mock implementation -->
  <bean id="emailService" class="org.kuali.rice.kcb.test.util.MockEmailServiceImpl" >
    <property name="weburl"><value>${kcb.url}</value></property>
    <property name="smtpHost"><value>${kcb.smtp.host}</value></property>
  </bean>
</beans>