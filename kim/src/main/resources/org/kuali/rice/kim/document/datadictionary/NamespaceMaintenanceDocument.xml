<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.rice.kim.bo.Namespace</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

       <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiNamespaceMaintenanceDocument</documentTypeName>
        <documentTypeCode>KNSD</documentTypeCode>
        <label>Namespace Document</label>
        <shortLabel>Namespace Maintenence</shortLabel>

        <summary>Namespace Document</summary>
        <description>This document is used to create or update Namespaces.</description>

        <lockingKeys>
            <field attributeName="id"/>
        </lockingKeys>

        <allowsNewOrCopy>true</allowsNewOrCopy>

        <maintainableSections>
            <maintainableSection title="Edit Namespace Information">
                <maintainableItems>
                    <maintainableField name="id" readOnly="true" required="false" />
                    <maintainableField name="name" readOnly="false" required="true" />
                    <maintainableField name="description" readOnly="false" required="true" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
