<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.rice.kim.bo.Principal">

        <inquiry>
            <title>Principal Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="id" />
                <field attributeName="name" />                  
            </inquiryFields></inquirySection>
            <inquirySection title="Group Membership">
        			<inquiryFields>
        				<inquiryCollection name="groups"
        					businessObjectClass="org.kuali.rice.kim.bo.Group">
        					<field attributeName="id" />
        					<field attributeName="name" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>
        		<inquirySection title="Roles">
        			<inquiryFields>
        				<inquiryCollection name="roles"
        					businessObjectClass="org.kuali.rice.kim.bo.Role">
        					<field attributeName="id" />
        					<field attributeName="name" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>
        	  </inquirySections>	
        </inquiry>

        <lookup>
            <title>Principal Lookup</title>

            <instructions>Lookup a Principal</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="name" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="id" required="false"  />
                <lookupField attributeName="name" required="false" />                                        
            </lookupFields>

            <resultFields>
                <field attributeName="id" />
                <field attributeName="name" />               
            </resultFields>
        </lookup>

        <titleAttribute>id</titleAttribute>

        <attributes>

            <attribute name="id" forceUppercase="true">
                <label>ID</label>
                <shortLabel>id</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="8" />
                </control>

			</attribute>

            <attribute name="name" forceUppercase="false">
                <label>Principal Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>500</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="100" />
                </control>

			</attribute>
			
			<attributeReference name="entityId"
				sourceAttributeName="id"
				sourceClassName="org.kuali.rice.kim.bo.Entity">
				<label>Entity</label>
                <shortLabel>Entity</shortLabel>
				<required>true</required>
				<control>
					<select
						valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
						businessObjectClass="org.kuali.rice.kim.bo.Entity"
						keyAttribute="id" labelAttribute="name" 
						includeKeyInLabel="true" />
				</control>
			</attributeReference>
			
			 <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
			<attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
        </attributes>
			
			<collections>
        	<collection name="groups">
        		<label>Groups</label>
        		<shortLabel>Groups</shortLabel>
        		<summary>Groups</summary>
        		<description>
        		 Groups of this Principal
        		</description>
        	</collection>
        	<collection name="roles">
        		<label>Roles</label>
        		<shortLabel>Roles</shortLabel>
        		<summary>Roles</summary>
        		<description>
        			Roles of this Principal
        		</description>
        	</collection>
        </collections>
		

           
        <objectLabel>Principal</objectLabel>
    </businessObject>
</dictionaryEntry>