<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">

<dictionaryEntry>
	<maintenanceDocument>
		<businessObjectClass>
			org.kuali.rice.kim.bo.Entity
		</businessObjectClass>
		<maintainableClass>
			org.kuali.core.maintenance.KualiMaintainableImpl
		</maintainableClass>

		<documentAuthorizerClass>
			org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase
		</documentAuthorizerClass>
		<authorizations>
			<authorization action="initiate">
				<workgroups>
					<workgroup>kualiUniversalGroup</workgroup>
				</workgroups>
			</authorization>
		</authorizations>

		<documentTypeName>
			KIMEntityMaintenanceDocument
		</documentTypeName>
		<documentTypeCode>KEMD</documentTypeCode>
		<label>Entity</label>
		<summary>Entity Maintenance Document</summary>
		<description>
			Maintenance document which allows you to create new Entity,
			or modify existing Entity.
		</description>

		<lockingKeys>
			<field attributeName="id" />
		</lockingKeys>

		<allowsNewOrCopy>true</allowsNewOrCopy>

		<maintainableSections>
			<maintainableSection title="Edit Entity">
				<maintainableItems>
					<maintainableField name="id" required="true"
						readOnly="true" />
					<maintainableField name="entityTypeId" required="true" />
					<maintainableField name="versionNumber" />
				</maintainableItems>
			</maintainableSection>
	    	<maintainableSection title="Entity Principal">
				<maintainableItems>
					<maintainableCollection name="principals"
						businessObjectClass="org.kuali.rice.kim.bo.Principal"  includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Principal" sourceAttributeName="principals" includeAddLine="true" summaryTitle="Principals">
						<maintainableField name="id" required="true"
							readOnly="true" readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="true" readOnly="true" template="name" />
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection> 
			
			<maintainableSection title="Entity Attributes">
				<maintainableItems>
					<maintainableCollection name="entityAttributes"
						businessObjectClass="org.kuali.rice.kim.bo.EntityAttribute">
						<maintainableField name="id" readOnly="true" required="true" />
						<maintainableField name="attributeTypeId" required="true" />
						<maintainableField name="namespaceId" required="true" />
						<maintainableField name="attributeName" required="true" />
						<maintainableField name="value" required="true" />
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
		</maintainableSections>
	</maintenanceDocument>
</dictionaryEntry>