<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.rice.kim.bo.Principal</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KIMPrincipalMaintenanceDocument</documentTypeName>
        <documentTypeCode>KPMD</documentTypeCode>
        <label>Principal</label>
        <summary>Principal Maintenance Document</summary>
        <description>Maintenance document which allows you to create new Principal, or modify existing Principal.</description>

        <lockingKeys>
            <field attributeName="id" />
        </lockingKeys>
        
		<allowsNewOrCopy>true</allowsNewOrCopy>
		
        <maintainableSections>
            <maintainableSection title="Edit Principal">
                <maintainableItems>
                    <maintainableField name="id" required="true" readOnly="true" />
                    <maintainableField name="name" required="true" /> 
                    <maintainableField name="entityId" required="true" />               
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
            
            <maintainableSection title="Group Membership">
				<maintainableItems>
					<maintainableCollection name="groups"
						businessObjectClass="org.kuali.rice.kim.bo.Group" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Group" sourceAttributeName="groups" includeAddLine="false"  summaryTitle="Groups">
						<maintainableField name="id" readOnly="true" readOnlyAfterAdd="true" required="true" template="id"/>
						<maintainableField name="name" readOnly="true" required="true" template="name"/>				
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
			
			<maintainableSection title="Assigned Roles">
				<maintainableItems>
					<maintainableCollection name="roles"
						businessObjectClass="org.kuali.rice.kim.bo.Role" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Role" sourceAttributeName="roles" includeAddLine="false"  summaryTitle="Assigned Roles">
						<maintainableField name="id" readOnly="true" required="true" template="id"/>
						<maintainableField name="name" readOnly="true" required="true" template="name"/>				
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
			
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>