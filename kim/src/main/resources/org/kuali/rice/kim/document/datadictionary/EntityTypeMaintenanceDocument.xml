<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KIMEntityTypeMaintenanceDocument" parent="KIMEntityTypeMaintenanceDocument-parentBean" />

  <bean id="KIMEntityTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.EntityType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KIMEntityTypeMaintenanceDocument-EditEntityType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="shortLabel" value="EntityType" />
    <property name="summary" value="EntityType Maintenance Document" />
    <property name="documentTypeName" value="KIMEntityTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KETM" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="EntityType" />
    <property name="description" value="Maintenance document which allows you to create new EntityType, or modify existing EntityType." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KIMEntityTypeMaintenanceDocument-EditEntityType" parent="KIMEntityTypeMaintenanceDocument-EditEntityType-parentBean" />

  <bean id="KIMEntityTypeMaintenanceDocument-EditEntityType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="id"
              p:readOnly="true" 
              p:required="true"
              p:defaultValueFinderClass="org.kuali.rice.kim.lookup.valuefinder.NextEntityTypeIdFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="description" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit EntityType" />
    <property name="title" value="Edit EntityType" />
  </bean>
</beans>
