<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KIMGroupMaintenanceDocument" parent="KIMGroupMaintenanceDocument-parentBean" />

  <bean id="KIMGroupMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Group" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KIMGroupMaintenanceDocument-EditGroup" />
        <ref bean="KIMGroupMaintenanceDocument-ParentGroups" />
        <ref bean="KIMGroupMaintenanceDocument-MemberGroups" />
        <ref bean="KIMGroupMaintenanceDocument-AssignedRoles" />
        <ref bean="KIMGroupMaintenanceDocument-GroupAttributes" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="shortLabel" value="Group" />
    <property name="summary" value="Group Maintenance Document" />
    <property name="documentTypeName" value="KIMGroupMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KGMD" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Group" />
    <property name="description" value="Maintenance document which allows you to create new Group,
			or modify existing Group." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KIMGroupMaintenanceDocument-EditGroup" parent="KIMGroupMaintenanceDocument-EditGroup-parentBean" />

  <bean id="KIMGroupMaintenanceDocument-EditGroup-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="id"
              p:readOnly="true" 
              p:required="true"
              p:defaultValueFinderClass="org.kuali.rice.kim.lookup.valuefinder.NextGroupIdFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="name" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="groupTypeId" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="description" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    <property name="id" value="Edit Group" />
    <property name="title" value="Edit Group" />
  </bean>
  <bean id="KIMGroupMaintenanceDocument-ParentGroups" parent="KIMGroupMaintenanceDocument-ParentGroups-parentBean" />

  <bean id="KIMGroupMaintenanceDocument-ParentGroups-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="sourceClassName" value="org.kuali.rice.kim.bo.Group" />
          <property name="sourceAttributeName" value="parentGroups" />
          <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Group" />
          <property name="includeAddLine" value="false" />
          <property name="summaryTitle" value="Parent Groups" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="id"
                    p:name="id"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:template="name"
                    p:name="name"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
          <property name="name" value="parentGroups" />
        </bean>
      </list>
    </property>
    <property name="id" value="Parent Groups" />
    <property name="title" value="Parent Groups" />
  </bean>
  <bean id="KIMGroupMaintenanceDocument-MemberGroups" parent="KIMGroupMaintenanceDocument-MemberGroups-parentBean" />

  <bean id="KIMGroupMaintenanceDocument-MemberGroups-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="sourceClassName" value="org.kuali.rice.kim.bo.Group" />
          <property name="sourceAttributeName" value="memberGroups" />
          <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Group" />
          <property name="includeAddLine" value="false" />
          <property name="summaryTitle" value="Member Groups" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="id"
                    p:name="id"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:template="name"
                    p:name="name"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
          <property name="name" value="memberGroups" />
        </bean>
      </list>
    </property>
    <property name="id" value="Member Groups" />
    <property name="title" value="Member Groups" />
  </bean>
  <bean id="KIMGroupMaintenanceDocument-AssignedRoles" parent="KIMGroupMaintenanceDocument-AssignedRoles-parentBean" />

  <bean id="KIMGroupMaintenanceDocument-AssignedRoles-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="sourceClassName" value="org.kuali.rice.kim.bo.Role" />
          <property name="sourceAttributeName" value="groupRoles" />
          <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Role" />
          <property name="includeAddLine" value="false" />
          <property name="summaryTitle" value="Assigned Roles" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="id"
                    p:name="id"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:template="name"
                    p:name="name"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
          <property name="name" value="groupRoles" />
        </bean>
      </list>
    </property>
    <property name="id" value="Assigned Roles" />
    <property name="title" value="Assigned Roles" />
  </bean>
  <bean id="KIMGroupMaintenanceDocument-GroupAttributes" parent="KIMGroupMaintenanceDocument-GroupAttributes-parentBean" />

  <bean id="KIMGroupMaintenanceDocument-GroupAttributes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="businessObjectClass" value="org.kuali.rice.kim.bo.GroupAttribute" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
		            p:name="id"
		            p:readOnly="true" 
		            p:required="true"
		            p:defaultValueFinderClass="org.kuali.rice.kim.lookup.valuefinder.NextGroupAttributeIdFinder" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:name="attributeName" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:name="attributeTypeId" />
              <bean parent="MaintainableFieldDefinition"
                    p:required="true"
                    p:name="value" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
          <property name="name" value="groupAttributes" />
        </bean>
      </list>
    </property>
    <property name="id" value="Group Attributes" />
    <property name="title" value="Group Attributes" />
  </bean>
</beans>
