<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">

<dictionaryEntry>
	<maintenanceDocument>
		<businessObjectClass>
			org.kuali.rice.kim.bo.Group
		</businessObjectClass>
		<maintainableClass>
			org.kuali.core.maintenance.KualiMaintainableImpl
		</maintainableClass>

		<documentAuthorizerClass>
			org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase
		</documentAuthorizerClass>
		<authorizations>
			<authorization action="initiate">
				<workgroups>
					<workgroup>WorkflowAdmin</workgroup>
				</workgroups>
			</authorization>
		</authorizations>

		<documentTypeName>
			KualiGroupMaintenanceDocument
		</documentTypeName>
		<documentTypeCode>KGMD</documentTypeCode>
		<label>Group</label>
		<summary>Group Maintenance Document</summary>
		<description>
			Maintenance document which allows you to create new Group,
			or modify existing Group.
		</description>

		<lockingKeys>
			<field attributeName="id" />
		</lockingKeys>

		<allowsNewOrCopy>true</allowsNewOrCopy>

		<maintainableSections>
			<maintainableSection title="Edit Group">
				<maintainableItems>
					<maintainableField name="id" required="true"
						readOnly="true" />
					<maintainableField name="name" required="true" />
					<maintainableField name="description" required="true" />
					<maintainableField name="versionNumber" />
				</maintainableItems>
			</maintainableSection>
			<maintainableSection title="Parent Groups">
				<maintainableItems>
					<maintainableCollection name="parentGroups"
						businessObjectClass="org.kuali.rice.kim.bo.Group" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Group" sourceAttributeName="parentGroups" includeAddLine="true" summaryTitle="Parent Groups">
						<maintainableField name="id" required="true"
							readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="false" readOnly="true" template="name"/>
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
			<maintainableSection title="Member Groups">
				<maintainableItems>
					<maintainableCollection name="memberGroups" 
						businessObjectClass="org.kuali.rice.kim.bo.Group" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Group" sourceAttributeName="memberGroups" includeAddLine="true" summaryTitle="Member Groups">
						<maintainableField name="id" required="true"
							readOnly="true" readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="false" readOnly="true" template="name" />
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
			<maintainableSection title="Group Roles">
				<maintainableItems>
					<maintainableCollection name="groupRoles"
						businessObjectClass="org.kuali.rice.kim.bo.Role"  includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Role" sourceAttributeName="groupRoles" includeAddLine="true" summaryTitle="Roles">
						<maintainableField name="id" required="true"
							readOnly="true" readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="true" readOnly="true" template="name" />
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
			
			<maintainableSection title="Group Attributes">
				<maintainableItems>
					<maintainableCollection name="groupAttributes"
						businessObjectClass="org.kuali.rice.kim.bo.GroupAttribute">
						<maintainableField name="id" readOnly="true" required="true" />
						<maintainableField name="attributeTypeId" required="true" />
						<maintainableField name="attributeName" required="true" />
						<maintainableField name="value" required="true" />
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
		</maintainableSections>
	</maintenanceDocument>
</dictionaryEntry>