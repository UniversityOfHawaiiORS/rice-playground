<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Entity" parent="Entity-parentBean" />

  <bean id="Entity-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Entity" />
    <property name="inquiryDefinition" >
      <ref bean="Entity-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Entity-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="id" />
    <property name="objectLabel" value="Entity" />
    <property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:shortLabel="Custom Entity Attributes"
              p:summary="Custom Entity Attributes"
              p:name="entityAttributeForms"
              p:label="Entity Attributes"
              p:description="Entity Attributes of this Entity" />
        <bean parent="CollectionDefinition"
              p:shortLabel="Associated Principals"
              p:summary="Associated Principals"
              p:name="principals"
              p:label="Associated Principals"
              p:description="Associated Principals for this Entity" />
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="Entity-id" />
        <ref bean="Entity-entityTypeId" />
        <ref bean="Entity-versionNumber" />
        <ref bean="Entity-objectId" />
        <ref bean="Entity-entityTypeName" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Entity-id" parent="Entity-id-parentBean" />

  <bean id="Entity-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="shortLabel" value="Id" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
    <property name="name" value="id" />
    <property name="label" value="Id" />
  </bean>
  <bean id="Entity-entityTypeName" parent="Entity-entityTypeName-parentBean" />

  <bean id="Entity-entityTypeName-parentBean" abstract="true" parent="EntityType-name">
    <property name="name" value="entityType.name" />
  </bean>
  <bean id="Entity-entityTypeId" parent="Entity-entityTypeId-parentBean" />

  <bean id="Entity-entityTypeId-parentBean" abstract="true" parent="EntityType-id">
    <property name="shortLabel" value="Type" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:businessObjectClass="org.kuali.rice.kim.bo.EntityType"
            p:valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
            p:includeKeyInLabel="false"
            p:keyAttribute="id"
            p:labelAttribute="name" />
    </property>
    <property name="name" value="entityTypeId" />
    <property name="label" value="Type" />
  </bean>
  <bean id="Entity-versionNumber" parent="Entity-versionNumber-parentBean" />

  <bean id="Entity-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>
  <bean id="Entity-objectId" parent="Entity-objectId-parentBean" />

  <bean id="Entity-objectId-parentBean" abstract="true" parent="AttributeReferenceDummy-objectId">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Entity-inquiryDefinition" parent="Entity-inquiryDefinition-parentBean" />

  <bean id="Entity-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
  	<property name="inquirableClass" value="org.kuali.rice.kim.inquiry.EntityInquirable" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="id" />
              <bean parent="FieldDefinition"
                    p:attributeName="entityType.name" />      
            </list>
          </property>
          <property name="title" value="Entity Info" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="principals" />
                <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Principal" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="id" />
                    <bean parent="FieldDefinition"
                          p:attributeName="name" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Entity Principals" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="entityAttributeForms" />
                <property name="businessObjectClass" value="org.kuali.rice.kim.web.form.EntityAttributeForm" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="attributeName" />
                    <bean parent="FieldDefinition"
                          p:attributeName="value" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Custom Entity Attributes" />
        </bean>
      </list>
    </property>
    <property name="title" value="Entity Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Entity-lookupDefinition" parent="Entity-lookupDefinition-parentBean" />

  <bean id="Entity-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Entity" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id"
              p:forceLookup="true" />
        <bean parent="FieldDefinition"
              p:attributeName="entityTypeId"
              p:forceLookup="true" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="entityType.name" />
      </list>
    </property>
    <property name="title" value="Entity Lookup" />
    <property name="menubar" value="&lt;a href=&quot;../kim/index.jsp&quot;&gt;KIM Home&lt;/a&gt;   &lt;a href=&quot;../index.html&quot;&gt;Main&lt;/a&gt;" />
  </bean>
</beans>
