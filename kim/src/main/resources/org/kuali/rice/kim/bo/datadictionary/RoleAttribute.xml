<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RoleAttribute" parent="RoleAttribute-parentBean" />

  <bean id="RoleAttribute-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.RoleAttribute" />
    <property name="titleAttribute" value="attributeName" />
    <property name="objectLabel" value="Role Attribute" />
    <property name="attributes" >
      <list>
        <ref bean="RoleAttribute-id" />
        <ref bean="RoleAttribute-attributeName" />
        <ref bean="RoleAttribute-value" />
        <ref bean="RoleAttribute-attributeTypeId" />
        <ref bean="RoleAttribute-roleId" />
        <ref bean="RoleAttribute-versionNumber" />
        <ref bean="RoleAttribute-objectId" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RoleAttribute-id" parent="RoleAttribute-id-parentBean" />

  <bean id="RoleAttribute-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="Id" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
    <property name="name" value="id" />
    <property name="label" value="Id" />
  </bean>
  <bean id="RoleAttribute-attributeName" parent="RoleAttribute-attributeName-parentBean" />

  <bean id="RoleAttribute-attributeName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="500" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="100" />
    </property>
    <property name="name" value="attributeName" />
    <property name="label" value="Role Attribute Name" />
  </bean>
  <bean id="RoleAttribute-value" parent="RoleAttribute-value-parentBean" />

  <bean id="RoleAttribute-value-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Value" />
    <property name="maxLength" value="4000" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:cols="40"
            p:rows="10" />
    </property>
    <property name="name" value="value" />
    <property name="label" value="Role Attribute Value" />
  </bean>
  <bean id="RoleAttribute-attributeTypeId" parent="RoleAttribute-attributeTypeId-parentBean" />

  <bean id="RoleAttribute-attributeTypeId-parentBean" abstract="true" parent="AttributeType-id">
    <property name="shortLabel" value="Type Name" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:businessObjectClass="org.kuali.rice.kim.bo.AttributeType"
            p:valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
            p:includeKeyInLabel="true"
            p:keyAttribute="id"
            p:labelAttribute="attributeTypeName" />
    </property>
    <property name="name" value="attributeTypeId" />
    <property name="label" value="Attribute Type Name" />
  </bean>
  <bean id="RoleAttribute-roleId" parent="RoleAttribute-roleId-parentBean" />

  <bean id="RoleAttribute-roleId-parentBean" abstract="true" parent="Role-id">
    <property name="shortLabel" value="Role" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:businessObjectClass="org.kuali.rice.kim.bo.Role"
            p:valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
            p:includeKeyInLabel="true"
            p:keyAttribute="id"
            p:labelAttribute="name" />
    </property>
    <property name="name" value="roleId" />
    <property name="label" value="Associated Role" />
  </bean>
  <bean id="RoleAttribute-versionNumber" parent="RoleAttribute-versionNumber-parentBean" />

  <bean id="RoleAttribute-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>
  <bean id="RoleAttribute-objectId" parent="RoleAttribute-objectId-parentBean" />

  <bean id="RoleAttribute-objectId-parentBean" abstract="true" parent="AttributeReferenceDummy-objectId">
  	<property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
  </bean>
</beans>
