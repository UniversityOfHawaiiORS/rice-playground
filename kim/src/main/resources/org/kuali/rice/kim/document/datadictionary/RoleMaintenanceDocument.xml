<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.rice.kim.bo.Role</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KIMRoleMaintenanceDocument</documentTypeName>
        <documentTypeCode>KRMD</documentTypeCode>
        <label>Role</label>
        <summary>Role Maintenance Document</summary>
        <description>Maintenance document which allows you to create new Role, or modify existing Roles.</description>
       
        <lockingKeys>
            <field attributeName="id" />
        </lockingKeys>
        
		<allowsNewOrCopy>true</allowsNewOrCopy>
		
        <maintainableSections>
            <maintainableSection title="Role Information">
                <maintainableItems>
                    <maintainableField name="id" required="true" readOnly="true" />
                    <maintainableField name="name" required="true" />
                    <maintainableField name="description" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Permissions for Role">
				<maintainableItems>
					<maintainableCollection name="permissions"
						businessObjectClass="org.kuali.rice.kim.bo.Permission" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Permission" sourceAttributeName="permissions" includeAddLine="true" summaryTitle="Permissions for Role">
						<maintainableField name="id" required="true"
							readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="false" readOnly="true" template="name"/>
						<maintainableField name="namespaceId" required="false" readOnly="true" template="namespaceId"/>
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
            <maintainableSection title="Principals with Role">
				<maintainableItems>
					<maintainableCollection name="principals"
						businessObjectClass="org.kuali.rice.kim.bo.Principal" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Principal" sourceAttributeName="principals" includeAddLine="true" summaryTitle="Principals with Role">
						<maintainableField name="id" required="true"
							readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="false" readOnly="true" template="name"/>
						<maintainableField name="entityId" required="false" readOnly="true" template="entityId"/>
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
            <maintainableSection title="Groups with Role">
				<maintainableItems>
					<maintainableCollection name="groups"
						businessObjectClass="org.kuali.rice.kim.bo.Group" includeMultipleLookupLine="true" sourceClassName="org.kuali.rice.kim.bo.Group" sourceAttributeName="groups" includeAddLine="true" summaryTitle="Groups with Role">
						<maintainableField name="id" required="true"
							readOnlyAfterAdd="true" template="id" />
						<maintainableField name="name" required="false" readOnly="true" template="name"/>
					</maintainableCollection>
				</maintainableItems>
			</maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>