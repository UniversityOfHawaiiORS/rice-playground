<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Role" parent="Role-parentBean" />

  <bean id="Role-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Role" />
    <property name="inquiryDefinition" >
      <ref bean="Role-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Role-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="name" />
    <property name="objectLabel" value="Role" />
    <property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:shortLabel="RoleAttributes"
              p:summary="These are attributes for the role."
              p:name="roleAttributes"
              p:label="Role Attributes"
              p:description="Attributes defined for the role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Permissions"
              p:summary="These are the permissions that are aggregated by this role."
              p:name="permissions"
              p:label="Permissions with Role"
              p:description="Permissions given to anyone/anything with this Role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Group Qualified Roles"
              p:summary="These are groups that have this role along with their qualifications."
              p:name="groupQualifiedRoles"
              p:label="Groups with Qualified Roles"
              p:description="Groups that have Qualified Roles for this Role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Principal Qualified Roles"
              p:summary="These are principals that have this role along with their qualifications."
              p:name="principalQualifiedRoles"
              p:label="Principals with Qualified Roles"
              p:description="Principals that have Qualified Roles for this Role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Principals"
              p:summary="These are the principals with this role."
              p:name="principals"
              p:label="Principals with Role"
              p:description="Principals that are given this Role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Groups"
              p:summary="These are the groups with this role."
              p:name="groups"
              p:label="Groups with Role"
              p:description="Groups that are given this Role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Group Qualified Role Attributes"
              p:summary="These are groups that have this role along with their qualification attributes."
              p:name="groupQualifiedRoleAttributes"
              p:label="Groups with Qualified Role Attributes"
              p:description="Group Qualified Role Attributes for this Role." />
        <bean parent="CollectionDefinition"
              p:shortLabel="Principal Qualified Role Attributes"
              p:summary="These are principals that have this role along with their qualification attributes."
              p:name="principalQualifiedRoleAttributes"
              p:label="Principals with Qualified Role Attributes"
              p:description="Principal Qualified Role Attributes for this Role." />
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="Role-id" />
        <ref bean="Role-name" />
        <ref bean="Role-description" />
        <ref bean="Role-versionNumber" />
        <ref bean="Role-objectId" />
        <ref bean="Group-newCollectionRecord" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Role-id" parent="Role-id-parentBean" />

  <bean id="Role-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="true" />
    <property name="shortLabel" value="Role Id" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
    <property name="name" value="id" />
    <property name="label" value="Id" />
  </bean>
  <bean id="Role-name" parent="Role-name-parentBean" />

  <bean id="Role-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="500" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="100" />
    </property>
    <property name="name" value="name" />
    <property name="label" value="Role Name" />
  </bean>
  <bean id="Role-description" parent="Role-description-parentBean" />

  <bean id="Role-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="4000" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:cols="40"
            p:rows="10" />
    </property>
    <property name="name" value="description" />
    <property name="label" value="Role Description" />
  </bean>
  <bean id="Role-versionNumber" parent="Role-versionNumber-parentBean" />

  <bean id="Role-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>
  <bean id="Role-objectId" parent="Role-objectId-parentBean" />

  <bean id="Role-objectId-parentBean" abstract="true" parent="AttributeReferenceDummy-objectId">
  </bean>
  
  <bean id="Role-newCollectionRecord" parent="Role-newCollectionRecord-parentBean" />

  <bean id="Role-newCollectionRecord-parentBean" abstract="true" parent="AttributeReferenceDummy-newCollectionRecord">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Role-inquiryDefinition" parent="Role-inquiryDefinition-parentBean" />

  <bean id="Role-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="id" />
              <bean parent="FieldDefinition"
                    p:attributeName="name" />
              <bean parent="FieldDefinition"
                    p:attributeName="description" />
            </list>
          </property>
          <property name="title" value="Header Text" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="roleAttributes" />
                <property name="businessObjectClass" value="org.kuali.rice.kim.bo.RoleAttribute" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="id" />
                    <bean parent="FieldDefinition"
                          p:attributeName="attributeTypeId" />
                    <bean parent="FieldDefinition"
                          p:attributeName="attributeName" />
                    <bean parent="FieldDefinition"
                          p:attributeName="value" />
                    <bean parent="FieldDefinition"
                          p:attributeName="roleId" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Role Attributes" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="permissions" />
                <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Permission" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="id" />
                    <bean parent="FieldDefinition"
                          p:attributeName="name" />
                    <bean parent="FieldDefinition"
                          p:attributeName="description" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Role Permissions" />
        </bean>
      </list>
    </property>
    <property name="title" value="Role Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Role-lookupDefinition" parent="Role-lookupDefinition-parentBean" />

  <bean id="Role-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Role" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
      </list>
    </property>
    <property name="title" value="Role Lookup" />
  </bean>
</beans>
