<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Namespace" parent="Namespace-parentBean" />

  <bean id="Namespace-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Namespace" />
    <property name="inquiryDefinition" >
      <ref bean="Namespace-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Namespace-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="name" />
    <property name="objectLabel" value="Namespace" />
    <property name="collections" >
      <list>
        <bean parent="CollectionDefinition"
              p:shortLabel="Attributes"
              p:summary="Namespace Default Attributes Attributes"
              p:elementLabel="Attribute"
              p:name="namespaceAttributes"
              p:label="Namespace Default Attributes"
              p:description="Attributes of this namespace" />
        <bean parent="CollectionDefinition"
              p:shortLabel="Permissions"
              p:summary="Namespace Permissions"
              p:elementLabel="Permission"
              p:name="namespacePermissions"
              p:label="Namespace Permissions"
              p:description="Permissions of this namespace" />
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="Namespace-id" />
        <ref bean="Namespace-name" />
        <ref bean="Namespace-description" />
        <ref bean="Namespace-versionNumber" />
        <ref bean="Namespace-objectId" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Namespace-id" parent="Namespace-id-parentBean" />

  <bean id="Namespace-id-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Id" />
    <property name="maxLength" value="8" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="8" />
    </property>
    <property name="name" value="id" />
    <property name="label" value="Id" />
  </bean>
  <bean id="Namespace-name" parent="Namespace-name-parentBean" />

  <bean id="Namespace-name-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Name" />
    <property name="maxLength" value="500" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="100" />
    </property>
    <property name="name" value="name" />
    <property name="label" value="Name" />
  </bean>
  <bean id="Namespace-description" parent="Namespace-description-parentBean" />

  <bean id="Namespace-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="4000" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="100" />
    </property>
    <property name="name" value="description" />
    <property name="label" value="Description" />
  </bean>
  <bean id="Namespace-versionNumber" parent="Namespace-versionNumber-parentBean" />

  <bean id="Namespace-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber">
  </bean>
  <bean id="Namespace-objectId" parent="Namespace-objectId-parentBean" />

  <bean id="Namespace-objectId-parentBean" abstract="true" parent="AttributeReferenceDummy-objectId">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Namespace-inquiryDefinition" parent="Namespace-inquiryDefinition-parentBean" />

  <bean id="Namespace-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="id" />
              <bean parent="FieldDefinition"
                    p:attributeName="name" />
              <bean parent="FieldDefinition"
                    p:attributeName="description" />
            </list>
          </property>
          <property name="title" value="Namespace Info" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="namespaceAttributes" />
                <property name="businessObjectClass" value="org.kuali.rice.kim.bo.NamespaceDefaultAttribute" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="id" />
                    <bean parent="FieldDefinition"
                          p:attributeName="attributeTypeId" />
                    <bean parent="FieldDefinition"
                          p:attributeName="attributeName" />
                    <bean parent="FieldDefinition"
                          p:attributeName="description" />
                    <bean parent="FieldDefinition"
                          p:attributeName="required" />
                    <bean parent="FieldDefinition"
                          p:attributeName="active" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Namespace Default Attributes" />
        </bean>
        <bean parent="InquirySectionDefinition">
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="InquiryCollectionDefinition">
                <property name="attributeName" value="namespacePermissions" />
                <property name="businessObjectClass" value="org.kuali.rice.kim.bo.Permission" />
                <property name="numberOfColumns" value="1" />
                <property name="inquiryFields" >
                  <list>
                    <bean parent="FieldDefinition"
                          p:attributeName="id" />
                    <bean parent="FieldDefinition"
                          p:attributeName="name" />
                    <bean parent="FieldDefinition"
                          p:attributeName="description" />
                  </list>
                </property>
              </bean>
            </list>
          </property>
          <property name="title" value="Namespace Permissions" />
        </bean>
      </list>
    </property>
    <property name="title" value="Namespace Inquiry" />
  </bean>

<!-- Business Object Lookup Definition -->
  <bean id="Namespace-lookupDefinition" parent="Namespace-lookupDefinition-parentBean" />

  <bean id="Namespace-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="instructions" value="Lookup a Namespace" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="id" />
        <bean parent="FieldDefinition"
              p:attributeName="name" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
      </list>
    </property>
    <property name="title" value="Namespace Lookup" />
  </bean>
</beans>
