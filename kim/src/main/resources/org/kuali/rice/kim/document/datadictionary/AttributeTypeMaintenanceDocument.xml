<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="KIMAttributeTypeMaintenanceDocument" parent="KIMAttributeTypeMaintenanceDocument-parentBean" />

  <bean id="KIMAttributeTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kim.bo.AttributeType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KIMAttributeTypeMaintenanceDocument-AttributeTypeInformation" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>id</value>
      </list>
    </property>
    <property name="shortLabel" value="Attribute Type Maintenence" />
    <property name="summary" value="Attribute Type Document" />
    <property name="documentTypeName" value="KIMAttributeTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="KATD" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="Attribute Type Document" />
    <property name="description" value="This document is used to create or update attribute types." />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="KIMAttributeTypeMaintenanceDocument-AttributeTypeInformation" parent="KIMAttributeTypeMaintenanceDocument-AttributeTypeInformation-parentBean" />

  <bean id="KIMAttributeTypeMaintenanceDocument-AttributeTypeInformation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="id"
              p:readOnly="true" 
              p:required="true" 
              p:defaultValueFinderClass="org.kuali.rice.kim.lookup.valuefinder.NextAttributeTypeIdFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="attributeTypeName" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="description" />
      </list>
    </property>
    <property name="id" value="Attribute Type Information" />
    <property name="title" value="Attribute Type Information" />
  </bean>
</beans>
