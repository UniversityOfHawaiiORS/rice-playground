<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
	<businessObject
		businessObjectClass="org.kuali.rice.kim.bo.GroupAttribute">

		<inquiry>
			<title>Group Attribute Inquiry</title>
			<inquirySections>
				<inquirySection title="Header Text">
					<inquiryFields>
						<field attributeName="id" />
						<field attributeName="attributeName" />
						<field attributeName="group.name" />
						<field attributeName="attributeType.attributeTypeName" />
						<field attributeName="value" />
					</inquiryFields>
				</inquirySection>
			</inquirySections>
		</inquiry>

		<lookup>
			<title>Group Attribute Lookup</title>

			<instructions>Lookup a Group Attribute</instructions>

			<defaultSort sortAscending="true">
				<sortAttributes>
					<sortAttribute attributeName="attributeName" />
				</sortAttributes>
			</defaultSort>

			<lookupFields>
				<lookupField attributeName="id" required="false" />
				<lookupField attributeName="attributeName"
					required="false" />
				<lookupField attributeName="attributeTypeId"
					required="false" />
				<lookupField attributeName="groupId"
					required="false" />
				<lookupField attributeName="value" required="false" />
			</lookupFields>

			<resultFields>
				<field attributeName="id" />
				<field attributeName="attributeName" />
				<field attributeName="group.name" />
				<field attributeName="attributeType.attributeTypeName" />
				<field attributeName="value" />
			</resultFields>
		</lookup>

		<titleAttribute>attributeName</titleAttribute>

		<attributes>

			<attribute name="id" forceUppercase="true">
				<label>ID</label>
				<shortLabel>id</shortLabel>

				<maxLength>8</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>

				<control>
					<text size="8" />
				</control>

			</attribute>

			<attribute name="attributeName" forceUppercase="false">
				<label>Group Attribute Name</label>
				<shortLabel>Name</shortLabel>

				<maxLength>500</maxLength>
				<validationPattern>
					<anyCharacter allowWhitespace="true" />
				</validationPattern>

				<control>
					<text size="100" />
				</control>

			</attribute>

			<attribute name="value" forceUppercase="false">
				<label>Group Attribute Value</label>
				<shortLabel>Value</shortLabel>

				<maxLength>4000</maxLength>
				<validationPattern>
					<anyCharacter allowWhitespace="true" />
				</validationPattern>

				<control>
					<textarea cols="40" rows="10" />
				</control>

			</attribute>

			<attributeReference name="attributeTypeId"
				sourceAttributeName="id"
				sourceClassName="org.kuali.rice.kim.bo.AttributeType">
				<label>Attribute Type Name</label>
                <shortLabel>Type Name</shortLabel>
				<required>true</required>
				<control>
					<select
						valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
						businessObjectClass="org.kuali.rice.kim.bo.AttributeType"
						keyAttribute="id" labelAttribute="attributeTypeName" 
						includeKeyInLabel="true" />
				</control>
			</attributeReference>
			
			<attributeReference name="groupId"
				sourceAttributeName="id"
				sourceClassName="org.kuali.rice.kim.bo.Group">
				<label>Associated Group</label>
                <shortLabel>Group</shortLabel>
				<required>true</required>
				<control>
					<select
						valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
						businessObjectClass="org.kuali.rice.kim.bo.Group"
						keyAttribute="id" labelAttribute="name" 
						includeKeyInLabel="true" />
				</control>
			</attributeReference>
			<attributeReference name="newCollectionRecord" 
                                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                                sourceAttributeName="newCollectionRecord" />
			<attributeReference name="versionNumber"
				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
				sourceAttributeName="versionNumber" />
			<attributeReference name="objectId"
				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
				sourceAttributeName="objectId" />
		</attributes>
		<objectLabel>Group Attribute</objectLabel>
	</businessObject>
</dictionaryEntry>