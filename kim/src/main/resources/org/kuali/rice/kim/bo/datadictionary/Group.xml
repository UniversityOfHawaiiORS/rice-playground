<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "https://test.kuali.org/dtds/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.rice.kim.bo.Group">

        <inquiry>
        	<title>Group Inquiry</title>

        	<inquirySections>
        		<inquirySection title="Group Info">
        			<inquiryFields>
        				<field attributeName="id" />
        				<field attributeName="name" />
        				<field attributeName="description" />
        				<field attributeName="groupType.name" />
        			</inquiryFields>		
        		</inquirySection>
        		<inquirySection title="Parent Group">
        			<inquiryFields>
        				<inquiryCollection name="parentGroups"
        					businessObjectClass="org.kuali.rice.kim.bo.Group">
        					<field attributeName="id" />
        					<field attributeName="name" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>
        		<inquirySection title="Sub Groups">
        			<inquiryFields>
        				<inquiryCollection name="memberGroups"
        					businessObjectClass="org.kuali.rice.kim.bo.Group">
        					<field attributeName="id" />
        					<field attributeName="name" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>
        		<inquirySection title="Group Roles">
        			<inquiryFields>
        				<inquiryCollection name="groupRoles"
        					businessObjectClass="org.kuali.rice.kim.bo.Role">
        					<field attributeName="id" />
        					<field attributeName="name" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>
        		<inquirySection title="Group Attributes">
        			<inquiryFields>
        				<inquiryCollection name="groupAttributes"
        					businessObjectClass="org.kuali.rice.kim.bo.GroupAttribute">
        					<field attributeName="id" />
							<field attributeName="attributeTypeId" />
							<field attributeName="attributeName" />
							<field attributeName="value" />
        				</inquiryCollection>
        			</inquiryFields>
        		</inquirySection>
        	</inquirySections>
        </inquiry>

        <lookup>
            <title>Group Lookup</title>

            <instructions>Lookup a Group</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="name" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="id" required="false" forceLookup="true" noLookup="false" />
                <lookupField attributeName="name" required="false" forceLookup="false" />
                <lookupField attributeName="description" required="false" forceLookup="false" />
                <lookupField attributeName="groupTypeId" required="false" forceLookup="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="id" />
                <field attributeName="name" />
                <field attributeName="description" />
            </resultFields>
        </lookup>

        <titleAttribute>id</titleAttribute>

        <attributes>

            <attribute name="id" forceUppercase="false">
                <label>ID</label>
                <shortLabel>id</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>
				
				<required>true</required>
				
                <control>
                    <text size="8" />
                </control>
                
			</attribute>

            <attribute name="name" forceUppercase="false">
                <label>Group Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>500</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="100" />
                </control>

			</attribute>

            <attribute name="description" forceUppercase="false">
                <label>Group Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>4000</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <textarea rows="10" cols="50" />
                </control>

			</attribute>
			
			<attributeReference name="groupTypeId" sourceClassName="org.kuali.rice.kim.bo.GroupType" sourceAttributeName="id">
				<label>Group Type</label>
                <shortLabel>Type</shortLabel>
				<required>true</required>
				<control>
					<select
						valuesFinderClass="org.kuali.core.lookup.keyvalues.PersistableBusinessObjectValuesFinder"
						businessObjectClass="org.kuali.rice.kim.bo.GroupType"
						keyAttribute="id" labelAttribute="name" 
						includeKeyInLabel="true" />
				</control>
			</attributeReference>
			<attributeReference name="newCollectionRecord" 
                                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                                sourceAttributeName="newCollectionRecord" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
			<attributeReference name="objectId" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="objectId" />
        </attributes>
        
        <collections>
        	<collection name="memberGroups">
        		<label>Member Groups</label>
        		<shortLabel>SubGroups</shortLabel>
        		<summary>Member Groups</summary>
        		<description>
        			Sub Groups of this group
        		</description>
        	</collection>
        	<collection name="parentGroups">
        		<label>Parent Groups</label>
        		<shortLabel>ParentGroups</shortLabel>
        		<summary>Parent Groups</summary>
        		<description>
        			Parents of this group
        		</description>
        	</collection>
        	<collection name="groupRoles">
        		<label>Group Roles</label>
        		<shortLabel>Roles</shortLabel>
        		<summary>Group Roles</summary>
        		<description>
        			Roles of this group
        		</description>
        	</collection>
        	<collection name="groupAttributes">
        		<label>Group Attributes</label>
        		<shortLabel>Attributes</shortLabel>
        		<summary>Group Attributes</summary>
        		<description>
        			Attributes of this group
        		</description>
        	</collection>
        </collections>

        <objectLabel>Group</objectLabel>
    </businessObject>
</dictionaryEntry>